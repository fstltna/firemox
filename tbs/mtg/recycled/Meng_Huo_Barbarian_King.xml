<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Meng Huo, Barbarian King">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3gg
	legendary creature
	4/4
	other green creatures you control get +1/+1.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>legend human barbarian soldier</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
					<has-color color="green"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
