<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Shade's Form">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1bb
	enchantment - aura
	enchant creature
	enchanted creature has "b: this creature gets +1/+1 until end of turn."
	when enchanted creature is put into a graveyard, return that card to play under your control.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is target="attachedto"/>
						<in-zone zone="play" card="tested"/>
					</and>
				</source-test>
				<destination-test>
						<in-zone zone="graveyard" card="tested"/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="context.card"/>
				<move-card controller="you" destination="play" name=""/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment ref='enchant-creature'>
		<modifiers>
			<ability-modifier operation="add" linked="true">
				<abilities>
					<activated-ability playable='instant' name='' zone='play'>
						<cost>
							<pay-mana black="1"/>
						</cost>
						<effects>
							<action ref="gain+1+1-until-eot"/>
						</effects>
					</activated-ability>
				</abilities>
			</ability-modifier>
		</modifiers>
	</attachment>
</card>
