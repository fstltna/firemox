<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Scion of Oona">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	creature - faerie soldier
	1/1
	flash
	flying
	other faerie creatures you control get +1/+1.
	other faeries you control have shroud. 
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>faerie soldier flying flash</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
			 		<has-property property="faerie"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<property-modifier property="shroud" linked="true" layer="global"/>			 		
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
		 			<controller player="you"/>
			 		<has-property property="faerie"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
