<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Drake Familiar">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1u
	creature - drake
	2/1
	flying
	when drake familiar comes into play, sacrifice it unless you return an enchantment in play to its owner's hand.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>drake flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref="target-enchantment"/>
						<action ref='return-to-hand'/>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
