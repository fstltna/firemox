<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Nantuko Shaman">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - insect shaman
	3/2
	when nantuko shaman comes into play, if you control no tapped lands, draw a card.
	suspend 1-2gg 
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>insect shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-suspend'>
			<actions>
				<pay-mana green='2' colorless='2' />
			</actions>
			<actions>
				<repeat value='1'/>
				<add-object object-name='time'/>
			</actions>
		</ability>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<if-then-hop elsehop="3">
					<test>
						<not>
							<has restriction-zone="play">
									<and>
										<controller player="you"/>
										<has-idcard idcard="land"/>
									</and>
							</has>
						</not>
					</test>
				</if-then-hop>
				<target type='you'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
