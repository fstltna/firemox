<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Soldevi Simulacrum">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4
	artifact creature
	2/4
	cumulative upkeep 1 
	1: soldevi simulacrum gets +1/+0 until end of turn.
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
			<register index='power' value='2'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors></colors>
		<idcards>artifact-creature </idcards>
		<properties>soldier</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cumulative-upkeep'/>
		<triggered-ability resolution='normal' zone='play' name='cumulative-upkeep'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana>
							<colorless>
								<counter object-name='age' card='this'/>
							</colorless>
						</pay-mana>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
			</cost>
			<effects>
				<action ref="gain+1+0-until-eot"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
