<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Alloy Golem">
	<rules-author-comment>riclas</rules-author-comment>

	<!--
		6
		artifact creature - golem
		4/4
		as alloy golem comes into play, choose a color.
		alloy golem is the chosen color. 
	-->

	<init>
		<registers>
			<register index='colorless' value='6' />
			<register index='power' value='4' />
			<register index='toughness' value='4' />
		</registers>
		<colors></colors>
		<idcards>creature artifact</idcards>
		<properties>golem</properties>
	</init>
	<abilities>
		<ability ref='cast-spell' />
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this />
						<not>
							<in-zone zone="play" />
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" />
				</destination-test>
			</moved-card>
			<cost>
				<input-color operation="or" index="0" register="stack" multiselect="false" />
			</cost>
			<effects>
				<target type="this" />
				<add-modifier>
					<color-modifier operation="set" linked="false" live-update="false">
						<color register="stack" index="0" />
					</color-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
