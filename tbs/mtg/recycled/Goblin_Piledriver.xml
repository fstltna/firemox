<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Goblin Piledriver">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	creature - goblin
	1/2
	protection from blue
	whenever goblin piledriver attacks, it gets +2/+0 until end of turn for each other attacking goblin.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin warrior protection-from-blue </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<mult right="2">
								<left>
									<counter restriction-zone="play">
										<and>
											<test ref="tested-is-attacking"/>
											<has-property property="goblin"/>
											<not>
												<is-this/>
											</not>
										</and>
									</counter>
								</left>
							</mult>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
