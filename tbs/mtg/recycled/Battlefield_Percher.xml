<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Battlefield Percher">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	creature - bird
	2/2
	flying
	battlefield percher can block only creatures with flying.
	1b: battlefield percher gets +1/+1 until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>bird flying block-only-flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana black='1' colorless='1' />
			</cost>
			<effects>
				<action ref="gain+1+1-until-eot"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
