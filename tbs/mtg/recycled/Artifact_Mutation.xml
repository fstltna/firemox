<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Artifact Mutation">
<rules-author-comment>riclas</rules-author-comment>

<!--
		rg
	instant
	destroy target artifact. it can't be regenerated. put x 1/1 green saproling creature tokens into play, where x is its converted mana cost.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='green' value='1'/>
		</registers>
		<colors>red green </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-artifact'/>
			</cost>
			<effects>
				<action ref="bury"/>
				<repeat>
					<value register="target-list.first" index="manacost"/>
				</repeat>
				<create-card>
					<card name='Saproling'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token saproling </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
