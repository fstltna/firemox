<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Shaleskin Bruiser">
<rules-author-comment>riclas</rules-author-comment>

<!--
		6r
	creature - beast
	4/4
	trample
	whenever shaleskin bruiser attacks, it gets +3/+0 until end of turn for each other attacking beast.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='6'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>beast trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<mult right="3">
								<left>
									<counter restriction-zone="play">
										<and>
											<not>
												<is-this/>
											</not>
											<has-property property="beast"/>
											<test ref="tested-is-attacking"/>
										</and>
									</counter>
								</left>
							</mult>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
