<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Defender en-Vec">
<rules-author-comment></rules-author-comment>

<!--  {3}{w} fading 4  
remove a fade counter from defender en-vec: prevent the next 2 damage that 
would be dealt to target creature or player this turn. -->

	<init>
		<registers>
			<register index="colorless" value="3"/>
			<register index="white" value="1"/>
			<register index="power" value="2"/>
			<register index="toughness" value="4"/>
		</registers>
		<colors>white</colors>
		<idcards>creature </idcards>
		<properties>human cleric</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<ability ref="fading"/>
		<activated-ability playable="instant" name="" zone="play">
			<cost>
				<action ref="T"/>
				<remove-object object-name="fading"/>
				<action ref="target-dealtable"/>
			</cost>
			<effects>
				<action ref="prevent-1"/>
			</effects>
		</activated-ability>
	</abilities>
	<modifiers>
		<object name="fade"/>
		<object name="fade"/>
		<object name="fade"/>
		<object name="fade"/>
	</modifiers>
</card>
