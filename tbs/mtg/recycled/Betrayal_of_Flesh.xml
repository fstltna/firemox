<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Betrayal of Flesh">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5b
	instant
	choose one - destroy target creature; or return target creature card from your graveyard to play.
	entwine-sacrifice three lands. 
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='5'/>
		</registers>
		<colors>black </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref='destroy'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<target type="card" mode="choose" raise-event="true" restriction-zone="graveyard">
					<test>
						<and>
							<controller player="you"/>
							<has-idcard idcard="creature"/>
						</and>
					</test>
				</target>
			</cost>
			<effects>
				<move-card controller="you" destination="play"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref="sacrifice-a-land" value="3"/>
				<action ref="entwine" />
				<action ref='target-creature'/>
				<target type="card" mode="choose" raise-event="true" restriction-zone="graveyard">
					<test>
						<and>
							<controller player="you"/>
							<has-idcard idcard="creature"/>
						</and>
					</test>
				</target>
			</cost>
			<effects>
				<move-card controller="you" destination="play"/>
				<target-list operation="remove-first"/>
				<action ref='destroy'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
