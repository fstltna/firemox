<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Might of the Nephilim">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	instant
	target creature gets +2/+2 until end of turn for each of its colors.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<mult right="2">
								<left>
									<bit-count>
										<value>
											<card-colors card="target-list.first" />
										</value>
									</bit-count>
								</left>
							</mult>
						</value>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<mult right="2">
								<left>
									<bit-count>
										<value>
											<card-colors card="target-list.first" />
										</value>
									</bit-count>
								</left>
							</mult>
						</value>
					</register-modifier>
				</add-modifier>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
