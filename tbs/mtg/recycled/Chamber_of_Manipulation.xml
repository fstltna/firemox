<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Chamber of Manipulation">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2uu
	enchantment - aura
	enchant land
	enchanted land has "t, discard a card: gain control of target creature until end of turn."
 -->

	<init>
		<registers>
			<register index='blue' value='2'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
	</abilities>
	<attachment ref='enchant-land'>
		<modifiers>
			<ability-modifier operation="add" linked="true">
				<abilities>
					<activated-ability playable='instant' name='' zone='play'>
						<cost>
							<action ref="T"/>
							<action ref='discard' value='1'/>
							<action ref="target-creature"/>
						</cost>
						<effects>
							<add-modifier>
								<controller-modifier player="you" linked="false">
									<until>
										<end-of-phase phase="cleanup" />
									</until>
								</controller-modifier>
							</add-modifier>
						</effects>
					</activated-ability>
				</abilities>
			</ability-modifier>
		</modifiers>
	</attachment>
</card>
