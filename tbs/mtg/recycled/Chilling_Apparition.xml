<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Chilling Apparition">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - spirit
	1/1
	b: regenerate chilling apparition.
	whenever chilling apparition deals combat damage to a player, that player discards a card.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana black='1' />
			</cost>
			<effects>
				<action ref='regenerate'/>
			</effects>
		</activated-ability>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="context.player"/>
				<action ref='player-discard' value='1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
