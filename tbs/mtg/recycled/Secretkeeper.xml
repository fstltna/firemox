<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Secretkeeper">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3u
	creature - spirit
	2/2
	as long as you have more cards in hand than each opponent, secretkeeper gets +2/+2 and has flying.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<register-modifier index="power" operation="add" value="2">
			<while>
				<sup>
					<left>
						<counter restriction-zone="hand">
							<controller player="you"/>
						</counter>
					</left>
					<right>
						<counter restriction-zone="hand">
							<controller player="opponent"/>
						</counter>
					</right>
				</sup>
			</while>
		</register-modifier>
		<register-modifier index="toughness" operation="add" value="2">
			<while>
				<sup>
					<left>
						<counter restriction-zone="hand">
							<controller player="you"/>
						</counter>
					</left>
					<right>
						<counter restriction-zone="hand">
							<controller player="opponent"/>
						</counter>
					</right>
				</sup>
			</while>
		</register-modifier>
		<property-modifier property="flying">
			<while>
				<sup>
					<left>
						<counter restriction-zone="hand">
							<controller player="you"/>
						</counter>
					</left>
					<right>
						<counter restriction-zone="hand">
							<controller player="opponent"/>
						</counter>
					</right>
				</sup>
			</while>
		</property-modifier>
	</modifiers>
</card>
