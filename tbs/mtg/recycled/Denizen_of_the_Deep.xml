<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Denizen of the Deep">
<rules-author-comment></rules-author-comment>

<!--  {6}{u}{u} when denizen of the deep comes into play, 
return all other creatures you control to their owner's hand. -->

	<init>
		<registers>
			<register index="colorless" value="6"/>
			<register index="blue" value="2"/>
			<register index="power" value="11"/>
			<register index="toughness" value="11"/>
		</registers>
		<colors>blue</colors>
		<idcards>creature </idcards>
		<properties>serpent</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone="play" card="tested"/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" card="tested"/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="all-creatures">
					<test>
						<and>
							<controller player="you"/>
							<not>
								<is-this/>
							</not>
						</and>
					</test>
				</action>
				<action ref="return-to-hand"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
