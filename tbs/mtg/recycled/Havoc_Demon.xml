<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Havoc Demon">
<rules-author-comment></rules-author-comment>

<!--
		5bb
	creature - demon
	5/5
	flying
	when havoc demon is put into a graveyard from play, all creatures 
	get -5/-5 until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='5'/>
			<register index='power' value='5'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>demon flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="all-creatures"/>
				<add-modifier>
					<register-modifier index="power" value="5" operation="minus" linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
					</register-modifier>
					<register-modifier index="toughness" value="5" operation="minus"
						linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
