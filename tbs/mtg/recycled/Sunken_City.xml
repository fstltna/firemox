<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Sunken City">
<rules-author-comment>riclas</rules-author-comment>

<!--
		uu
	enchantment
	blue creatures get +1/+1.
	at the beginning of your upkeep, sacrifice sunken city unless you pay uu.
 -->

	<init>
		<registers>
			<register index='blue' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana blue='2'/>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
			 		<has-color color="blue"/>
			 		<has-idcard idcard="creature"/>
				</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
