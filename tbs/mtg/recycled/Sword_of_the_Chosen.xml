<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Sword of the Chosen">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2
	legendary artifact
	t :target legendary creature gets +2/+2 until end of turn.
 -->

	<init>
		<registers>
			<register index='colorless' value='2'/>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
		<properties>legend </properties>
	</init>
	<abilities>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'>
					<test>
						<has-property property="legend"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
