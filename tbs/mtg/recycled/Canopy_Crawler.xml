<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Canopy Crawler">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - beast
	2/2
	amplify 1 
	t :target creature gets +1/+1 until end of turn for each +1/+1 counter on canopy crawler.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>beast </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref="amplify-1"/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter object-name="+1/+1" card="this"/>
						</value>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter object-name="+1/+1" card="this"/>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
