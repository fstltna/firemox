<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Bull Aurochs">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	creature - aurochs
	2/1
	trample
	whenever bull aurochs attacks, it gets +1/+0 until end of turn for each other attacking aurochs.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>aurochs trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter restriction-zone="play">
								<and>
									<has-property property="aurochs"/>
									<test ref="tested-is-attacking"/>
								</and>
							</counter>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
