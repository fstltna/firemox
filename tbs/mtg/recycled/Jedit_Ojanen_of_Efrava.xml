<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Jedit Ojanen of Efrava">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3ggg
	legendary creature - cat warrior 
	5/5
	forestwalk
	whenever jedit ojanen of efrava attacks or blocks, put a 2/2 green cat warrior creature token with forestwalk into play.
 -->

	<init>
		<registers>
			<register index='green' value='3'/>
			<register index='colorless' value='3'/>
			<register index='power' value='5'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>legend cat warrior forestwalk</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<repeat value='1'/>
				<create-card>
					<card name='Cat'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='2'/>
								<register index='toughness' value='2'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token cat forestwalk </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<repeat value='1'/>
				<create-card>
					<card name='Cat'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='2'/>
								<register index='toughness' value='2'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token cat forestwalk </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
