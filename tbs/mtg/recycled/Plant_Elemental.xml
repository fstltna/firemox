<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Plant Elemental">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	creature - plant elemental
	3/4
	when plant elemental comes into play, sacrifice it unless you sacrifice a forest.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='3'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>plant elemental </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='sacrifice-this'/>
					</either>
					<either>
						<action ref='sacrifice-a-permanent' value='1'>
							<test>
								<has-idcard idcard='forest'/>
							</test>
						</action>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
