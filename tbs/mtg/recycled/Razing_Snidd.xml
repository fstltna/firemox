<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Razing Snidd">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4br
	creature - beast
	3/3
	when razing snidd comes into play, return a black or red creature you control to its owner's hand.
	when razing snidd comes into play, each player sacrifices a land.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='black' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>red black </colors>
		<idcards>creature </idcards>
		<properties>beast </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="target-creature">
					<test>
						<and>
							<controller player="you"/>
							<or>
								<has-color color="black"/>
								<has-color color="red"/>
							</or>
						</and>
					</test>
				</action>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="sacrifice-a-land" value="1"/>
				<action ref="opponent-sacrifice-a-land" value="1"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
