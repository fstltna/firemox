<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Elvish Pathcutter">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - elf
	1/2
	2g: target elf gains forestwalk until end of turn.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf scout</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' colorless='2' />
				<action ref='target-creature'>
					<test>
						<has-property property="elf"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='forestwalk' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
