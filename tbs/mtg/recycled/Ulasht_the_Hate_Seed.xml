<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Ulasht, the Hate Seed">

	<!--  Ulasht, the Hate Seed comes into play with a +1/+1 counter on it for 
		each other red creature you control and a +1/+1 counter on it for each other 
		green creature you control.
		1 Mana, Remove a +1/+1 counter from Ulasht: Choose one â€” Ulasht deals 1 
		damage to target creature; or put a 1/1 green Saproling creature token into 
		play. 
	-->
	<init>
		<registers>
			<register index="colorless" value="2" />
			<register index="red" value="1" />
			<register index="green" value="1" />
			<register index="power" value="0" />
			<register index="toughness" value="0" />
		</registers>
		<colors>red green</colors>
		<idcards>creature</idcards>
		<properties>hellion hydra legend</properties>
	</init>
	<abilities>
		<activated-ability playable="this" zone="hand">
			<cost>
				<pay-mana value="manacost" />
			</cost>
			<effects>
				<action ref="put-in-play" />
				<repeat>
					<value>
						<add>
							<left>
								<counter restriction-zone="play">
									<and>
										<has-idcard idcard="creature" />
										<controller player="you" />
										<has-color color="red" />
										<not>
											<is-this />
										</not>
									</and>
								</counter>
							</left>
							<right>
								<counter restriction-zone="play">
									<and>
										<has-idcard idcard="creature" />
										<controller player="you" />
										<has-color color="green" />
										<not>
											<is-this />
										</not>
									</and>
								</counter>
							</right>
						</add>
					</value>
				</repeat>
				<add-object object-name="+1/+1" />
			</effects>
		</activated-ability>

		<activated-ability playable="instant" name="" zone="play">
			<cost>
				<pay-mana colorless="1" />
				<target type="this" />
				<remove-object object-name="+1/+1" />
				<target-list operation="clear" name="%" />
			</cost>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref="target-creature" />
						<assign-damage value="1" type="damage-normal" />
					</either>
					<either>
						<create-card>
							<card name="Saproling">
								<init>
									<registers>
										<register index="power" value="1" />
										<register index="toughness" value="1" />
									</registers>
									<colors>green</colors>
									<idcards>creature</idcards>
									<properties>saproling token</properties>
								</init>
							</card>
						</create-card>
						<move-card controller="you" destination="play" />
					</either>
				</choice>
			</effects>
		</activated-ability>
	</abilities>
</card>