<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Yukora, the Prisoner">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2bb
	legendary creature - demon spirit
	5/5
	when yukora, the prisoner leaves play, sacrifice all non-ogre creatures you control.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='5'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>legend demon spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<not>
						<in-zone zone='play' card='tested'/>
					</not>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="creatures-you-control">
					<test>
						<not>
							<has-property property="ogre"/>
						</not>
					</test>
				</action>
				<action ref="sacrifice"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
