<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Orbweaver Kumo">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4gg
	creature - spirit
	3/4
	reach 
	whenever you play a spirit or arcane spell, orbweaver kumo gains forestwalk until end of turn.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>spirit reach </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<and>
						<or>
							<has-property property="spirit" />
							<has-property property="arcane" />
						</or>
						<controller player="you"/>
					</and>
				</test>
			</casting>
			<effects>
				<target type='this'/>
				<action ref="forestwalk-until-eot"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
