<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Galvanic Arc">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2r
	enchantment - aura
	enchant creature
	when galvanic arc comes into play, it deals 3 damage to target creature or player.
	enchanted creature has first strike.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='3' type='damage-normal'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<modifiers>
			<property-modifier property='first-strike' linked='true'/>
		</modifiers>
		<valid-target ref='valid-creature-to-enchant' />
		<valid-attachment ref='valid-enchant-creature' />
	</attachment>
</card>
