<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Brood Sliver">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4g
	creature - sliver
	3/3
	whenever a sliver deals combat damage to a player, its controller may put a 1/1 colorless sliver creature token into play.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>sliver </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<has-property property="sliver"/>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<choice controller="context.card2.controller" cancel="true">
					<either>
						<create-card>
							<card name='Sliver'>
								<rules-author-comment></rules-author-comment>
								<init>
									<registers>
										<register index='power' value='1'/>
										<register index='toughness' value='1'/>
									</registers>
									<colors></colors>
									<idcards>creature</idcards>
									<properties>token sliver </properties>
								</init>
							</card>
						</create-card>
						<move-card controller='context.card2.controller' destination='play'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
