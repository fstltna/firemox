<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Defy Gravity">
<rules-author-comment>riclas</rules-author-comment>

<!--
		u
	instant
	target creature gains flying until end of turn.
	flashback u 
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>instant </idcards>
	</init>
	<actions>
		<action reference-name='main-effects'>
				<action ref='target-creature'/>
				<add-modifier>
					<property-modifier property='flying' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
		</action>
	</actions>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='flashback%a' zone='graveyard'>
			<cost>
				<pay-mana blue='1' />
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref="flashback"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
