<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Shrieking Grotesque">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2w
	creature - gargoyle
	2/1
	flying
	when shrieking grotesque comes into play, if b was spent to play shrieking grotesque, target player discards a card.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>gargoyle flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<sup right="0">
							<left>
								<mana-paid card="this" color="black" />
							</left>
						</sup>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-player'/>
			</cost>
			<effects>
				<action ref='player-discard' value='1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
