<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Bog Glider">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - mercenary
	1/1
	flying
	t, sacrifice a land: search your library for a mercenary card with converted mana cost 2 or less and put that card into play. then shuffle your library.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>human mercenary flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='sacrifice-a-land' value='1'/>
			</cost>
			<effects>
				<action ref="search-lib">
					<test>
						<and>
							<has-property property="mercenary"/>
							<sup left="3">
								<right register="tested" index="manacost"/>
							</sup>
						</and>
					</test>
				</action>
				<move-card controller="target.owner" destination="play"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
