<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Boggart Harbinger">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - goblin shaman
	2/1
	when boggart harbinger comes into play, you may search your library for a goblin card, reveal it, then shuffle your library and put that card on top of it.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>goblin shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<action ref='search-lib-reveal' value="1">
							<test>
								<has-property property='goblin'/>
							</test>
						</action>
						<action ref="move-library-top"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
