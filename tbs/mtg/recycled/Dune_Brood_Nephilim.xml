<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Dune-Brood Nephilim">
<rules-author-comment>riclas</rules-author-comment>

<!--
		brgw
	creature - nephilim
	3/3
	whenever dune-brood nephilim deals combat damage to a player, put a 1/1 colorless sand creature token into play for each land you control.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='red' value='1'/>
			<register index='green' value='1'/>
			<register index='black' value='1'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white red green black </colors>
		<idcards>creature </idcards>
		<properties>nephilim </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<repeat>
					<value>
						<counter restriction-zone="play">
							<and>
								<controller player="you"/>
								<has-idcard idcard="land"/>
							</and>
						</counter>
					</value>
				</repeat>
				<create-card>
					<card name='Sand'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors></colors>
							<idcards>creature</idcards>
							<properties>token sand </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
