<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Liberated Dwarf">
<rules-author-comment>riclas</rules-author-comment>

<!--
		r
	creature - dwarf
	1/1
	r, sacrifice liberated dwarf: target green creature gets +1/+0 and gains first strike until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>dwarf </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' />
				<action ref='sacrifice-this'/>
				<action ref='target-creature'>
					<test>
						<has-color color="green"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
