<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Sadistic Glee">
<rules-author-comment>riclas</rules-author-comment>

<!--
		b
	enchantment - aura
	enchant creature
	whenever a creature is put into a graveyard from play, put a +1/+1 counter on enchanted creature.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="creature"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="attachedto"/>
				<add-object object-name='+1/+1'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<valid-target ref='valid-creature-to-enchant' />
		<valid-attachment ref='valid-enchant-creature' />
	</attachment>
</card>
