<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Embermage Goblin">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3r
	creature - goblin wizard
	1/1
	when embermage goblin comes into play, you may search your library for a card named embermage goblin, reveal it, and put it into your hand. if you do, shuffle your library.
	t :embermage goblin deals 1 damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref='search-lib-reveal' value="1">
					<test>
						<has-name name="embermage_goblin"/>
					</test>
				</action>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
