<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Thunder Dragon">
<rules-author-comment>Fabdouglas</rules-author-comment>

<!--  {5}{r}{r} flying 
when thunder dragon comes into play, it deals 3 damage to each creature without flying. -->
	<init>
		<registers>
			<register index="colorless" value="5"/>
			<register index="red" value="2"/>
			<register index="power" value="5"/>
			<register index="toughness" value="5"/>
		</registers>
		<colors>red</colors>
		<idcards>creature </idcards>
		<properties>flying dragon</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone="play" card="tested"/>
						</not>
					</and>
				</source-test>
				<destination-test>
						<in-zone zone="play" card="tested"/>
				</destination-test>
			</moved-card>
			<effects>
				<target mode="all" type="card" restriction-zone="play">
					<test>
						<not>
							<has-property property="flying"/>
						</not>
					</test>
				</target>
				<assign-damage value="3" type="damage-normal"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
