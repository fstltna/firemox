<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Mausoleum Turnkey">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3b
	creature - ogre rogue
	3/2
	when mausoleum turnkey comes into play, return target creature card of an opponent's choice from your graveyard to your hand.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>ogre rogue </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<target type="card" mode="opponentchoose" raise-event="true" restriction-zone="graveyard">
					<test>
						<and>
							<controller player="you"/>
							<has-idcard idcard="creature"/>
						</and>
					</test>
				</target>
			</cost>
			<effects>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
