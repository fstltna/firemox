<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Black Market">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	enchantment
	whenever a creature is put into a graveyard from play, put a charge counter on black market.
	at the beginning of your precombat main phase, add b to your mana pool for each charge counter on black market.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="creature"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='this'/>
				<add-object object-name='charge'/>
			</effects>
		</triggered-ability>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='precombat-main'>
				<test>
					<controller player="you"/>
				</test>
			</beginning-of-phase>
			<effects>
				<give-mana>
					<black>
						<counter object-name="charge" card="this"/>
					</black>
				</give-mana>
			</effects>
		</triggered-ability>
	</abilities>
</card>
