<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Seed Spark">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3w
	instant
	destroy target artifact or enchantment. if g was spent to play seed spark, put two 1/1 green saproling creature tokens into play.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='3'/>
		</registers>
		<colors>white </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-permanent'>
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="destroy"/>
				<if-then-hop elsehop="4">
					<test>
						<sup right="0">
							<left>
								<mana-paid card="this" color="green" />
							</left>
						</sup>
					</test>
				</if-then-hop>
				<repeat value='2'/>
				<create-card>
					<card name='Saproling'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token saproling </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
