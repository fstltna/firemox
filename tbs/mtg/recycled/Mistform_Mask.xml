<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Mistform Mask">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1u
	enchantment - aura
	enchant creature
	1: enchanted creature's type becomes the creature type of your choice until end of turn.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
			</cost>
			<effects>
				<target type="attachedto"/>
				<input-property operation="set" index="free0" register="this"
					values="FIRST_SUB_TYPE..LAST_SUB_TYPE" />
				<add-modifier>
					<property-modifier linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
						<property register="this" index="free0"/>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
	<attachment ref='enchant-creature'/>
</card>
