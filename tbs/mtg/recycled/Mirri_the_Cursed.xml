<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Mirri the Cursed">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2bb
	legendary creature - vampire cat
	3/2
	flying, first strike, haste
	whenever mirri the cursed deals combat damage to a creature, put a +1/+1 counter on mirri the cursed.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>legend vampire cat flying first-strike haste </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<and>
						<not>
							<is-player/>
						</not>
						<has-idcard idcard='creature'/>
					</and>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type='this'/>
				<add-object object-name='+1/+1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
