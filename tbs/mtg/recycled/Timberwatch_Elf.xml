<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Timberwatch Elf">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - elf
	1/2
	t :target creature gets +x/+x until end of turn, where x is the number of elves in play.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter restriction-zone="play">
								<has-property property="elf"/>
							</counter>
						</value>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter restriction-zone="play">
								<has-property property="elf"/>
							</counter>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
