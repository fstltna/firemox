<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Aliban's Tower">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	instant
	target blocking creature gets +3/+1 until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'>
					<test ref="tested-is-blocking" /> 
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
