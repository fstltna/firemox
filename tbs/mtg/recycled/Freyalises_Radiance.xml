<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Freyalise's Radiance">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	enchantment
	cumulative upkeep 2 
	snow permanents don't untap during their controllers' untap steps.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cumulative-upkeep'/>
		<triggered-ability resolution='normal' zone='play' name='cumulative-upkeep'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana>
							<colorless>
								<mult right="2">
									<left>
										<counter object-name='age' card='this'/>
									</left>
								</mult>
							</colorless>
						</pay-mana>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<property-modifier property="does-not-untap" linked="true" layer="global"/>			 		
			</modifiers>
			<while>
				<has-property property="snow"/>
		 	</while>
		</static-modifier>
	</modifiers>
</card>
