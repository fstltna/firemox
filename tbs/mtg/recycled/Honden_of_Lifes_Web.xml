<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Honden of Life's Web">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4g
	legendary enchantment - shrine
	at the beginning of your upkeep, put a 1/1 colorless spirit creature token into play for each shrine you control.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>global-enchantment </idcards>
		<properties>legend shrine </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<effects>
				<repeat>
					<value>
						<counter restriction-zone="play">
							<and>
								<has-property property="shrine"/>
								<controller player="you"/>
							</and>
						</counter>
					</value>
				</repeat>
				<create-card>
					<card name='Spirit'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors></colors>
							<idcards>creature</idcards>
							<properties>token spirit </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
