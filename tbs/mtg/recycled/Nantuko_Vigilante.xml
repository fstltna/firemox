<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Nantuko Vigilante">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - insect druid mutant
	3/2
	morph 1g 
	when nantuko vigilante is turned face up, destroy target artifact or enchantment.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>insect druid mutant </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana green='1' colorless='1' />
			</actions>
		</ability>
		<triggered-ability zone='play'>
			<faced-up>
				<test>
					<is-this />
				</test>
			</faced-up>
			<cost>
				<action ref='target-permanent'>
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='destroy'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
