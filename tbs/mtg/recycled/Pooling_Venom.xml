<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Pooling Venom">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1b
	enchantment - aura
	enchant land
	whenever enchanted land becomes tapped, its controller loses 2 life.
	3b: destroy enchanted land.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<become-tapped>
				<test>
					<is-this card='attachedto'/>
				</test>
			</become-tapped>
			<effects>
				<target type="context.card.controller"/>
				<action ref='lose-life-target' value='2'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana black='1' colorless='3' />
			</cost>
			<effects>
				<target type='attachedto'/>
				<action ref='destroy'/>
			</effects>
		</activated-ability>
	</abilities>
	<attachment>
		<valid-target ref='valid-land-to-enchant' />
		<valid-attachment ref='valid-enchant-land' />
	</attachment>
</card>
