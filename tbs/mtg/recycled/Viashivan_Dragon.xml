<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Viashivan Dragon">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2rrgg
	creature - dragon
	4/4
	flying
	r: viashivan dragon gets +1/+0 until end of turn.
	g: viashivan dragon gets +0/+1 until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='green' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>red green </colors>
		<idcards>creature </idcards>
		<properties>dragon flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' />
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='toughness' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
