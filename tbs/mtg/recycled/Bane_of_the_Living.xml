<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Bane of the Living">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2bb
	creature - insect
	4/3
	morph xbb 
	when bane of the living is turned face up, all creatures get -x/-x until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='4'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>insect </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana black='2' />
				<action ref="pay-x"/>
			</actions>
		</ability>
		<triggered-ability zone='play'>
			<faced-up>
				<test>
					<is-this />
				</test>
			</faced-up>
			<effects>
				<action ref="all-creatures"/>
				<add-modifier>
					<register-modifier index='power' operation='minus' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value register="stack" index="0"/>
					</register-modifier>
					<register-modifier index='toughness' operation='minus' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value register="stack" index="0"/>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
