<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Thrashing Mudspawn">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	creature - beast
	4/4
	whenever thrashing mudspawn is dealt damage, you lose that much life.
	morph 1bb 
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>beast </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type="damage-any">
				<destination-test>
					<and>
						<is-face-up card="this"/>
						<is-this />
					</and>
				</destination-test>
			</assigned-damage>
			<effects>
				<action ref='lose-life' value="context.int"/>
			</effects>
		</triggered-ability>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana black='2' colorless='1' />
			</actions>
		</ability>
	</abilities>
</card>
