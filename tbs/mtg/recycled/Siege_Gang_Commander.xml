<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Siege-Gang Commander">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3rr
	creature - goblin
	2/2
	when siege-gang commander comes into play, put three 1/1 red goblin creature tokens into play.
	1r, sacrifice a goblin: siege-gang commander deals 2 damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='3'/>
				<create-card>
					<card name='Goblin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>red</colors>
							<idcards>creature</idcards>
							<properties>token goblin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' colorless='1' />
				<action ref='sacrifice-a-permanent' value='1'>
					<test>
						<has-property property='goblin'/>
					</test>
				</action>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='2' type='damage-normal'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
