<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Field Marshal">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1ww
	creature - human soldier
	2/2
	other soldiers get +1/+1 and have first strike.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<property-modifier property="first-strike" linked="true" layer="global"/>			 		
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
		 			<not>
		 				<is-this/>
		 			</not>
			 		<has-property property="soldier"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
