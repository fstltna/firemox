<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Hunting Drake">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4u
	creature - drake
	2/2
	flying
	when hunting drake comes into play, put target red or green creature on top of its owner's library.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>drake flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-creature'>
					<test>
						<or>
							<has-color color='red'/>
							<has-color color='green'/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<move-card controller="target-list.first.owner" destination="library" position="top"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
