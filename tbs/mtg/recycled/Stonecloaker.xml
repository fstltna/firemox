<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Stonecloaker">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2w
	creature - gargoyle
	3/2
	flash 
	flying
	when stonecloaker comes into play, return a creature you control to its owner's hand.
	when stonecloaker comes into play, remove target card in a graveyard from the game.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>gargoyle flash flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="target-creature">
					<test>
						<controller player="you"/>
					</test>
				</action>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<target type="card" mode="choose" restriction-zone="graveyard"/>
			</cost>
			<effects>
				<action ref="remove-from-game"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
