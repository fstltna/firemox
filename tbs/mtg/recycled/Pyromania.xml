<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Pyromania">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2r
	enchantment
	1r, discard a card at random: pyromania deals 1 damage to target creature or player.
	1r, sacrifice pyromania: pyromania deals 1 damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' colorless='1' />
				<action ref='discard-random' value="1"/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' colorless='1' />
				<action ref='sacrifice-this'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
