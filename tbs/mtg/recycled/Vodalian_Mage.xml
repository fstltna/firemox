<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Vodalian Mage">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u

	creature - merfolk

	1/1

	u, t :counter target spell unless its controller pays 1.
 -->


	<init>
		<registers>
			<register index="blue" value="1"/>
			<register index="colorless" value="2"/>
			<register index="power" value="1"/>
			<register index="toughness" value="1"/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>merfolk wizard</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<activated-ability playable="instant" name="" zone="play">
			<cost>
				<pay-mana blue="1" />
				<action ref="T"/>
				<action ref="target-spell"/>
			</cost>
			<effects>
				<choice cancel="false" controller="target-list.first.controller">
					<either>
						<action ref= "counter"/>
					</either>
					<either>
						<pay-mana colorless="1" controller="target-list.first.controller"/>
					</either>
				</choice>
			</effects>
		</activated-ability>
	</abilities>
</card>
