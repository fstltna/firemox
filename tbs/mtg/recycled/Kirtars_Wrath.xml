<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kirtar's Wrath">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4ww
	sorcery
	destroy all creatures. they can't be regenerated.
	threshold - if seven or more cards are in your graveyard, instead destroy all creatures, then put two 1/1 white spirit creature tokens with flying into play. creatures destroyed this way can't be regenerated.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='4'/>
		</registers>
		<colors>white </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<action ref="all-creatures"/>
				<action ref='bury'/>
				<if-then-hop elsehop="4">
					<test ref="threshold"/>
				</if-then-hop>
				<repeat value='2'/>
				<create-card>
					<card name='Spirit'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token spirit flying </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
