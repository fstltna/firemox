<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Selesnya Evangel">
<rules-author-comment>riclas</rules-author-comment>

<!--
		gw
	creature - elf shaman
	1/2
	1, t, tap an untapped creature you control: put a 1/1 green saproling creature token into play.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='green' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white green </colors>
		<idcards>creature </idcards>
		<properties>elf shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
				<action ref='T'/>
				<action ref="target-creature">
					<test>
						<and>
							<controller player="you"/>
							<in-zone zone="playANDuntapped"/>
						</and>
					</test>
				</action>
				<tap/>
			</cost>
			<effects>
				<create-card>
					<card name='Saproling'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token saproling </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
