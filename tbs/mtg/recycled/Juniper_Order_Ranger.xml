<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Juniper Order Ranger">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3gw
	creature - human knight
	2/4
	whenever another creature comes into play under your control, put a +1/+1 counter on that creature and a +1/+1 counter on juniper order ranger.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>white green </colors>
		<idcards>creature </idcards>
		<properties>human knight </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<not>
							<is-this/>
						</not>
						<has-idcard idcard="creature"/>
						<controller player="you"/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="this"/>
				<target type="context.card"/>
				<add-object object-name='+1/+1'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
