<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Greenseeker">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	creature - elf spellshaper
	1/1
	g, t, discard a card: search your library for a basic land card, reveal it, and put it into your hand. then shuffle your library.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf spellshaper </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='T'/>
				<action ref='discard' value="1"/>
			</cost>
			<effects>
				<action ref='search-lib-reveal' value="1">
					<test>
						<test ref="is-basic-land"/>
					</test>
				</action>
				<action ref='return-to-hand'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
