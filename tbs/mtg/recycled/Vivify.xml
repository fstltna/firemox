<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Vivify">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	instant
	target land becomes a 3/3 creature until end of turn. it's still a land.
	draw a card.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-land'/>
			</cost>
			<effects>
				<add-modifier>
					<register-indirection index="power" value="3" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<register-indirection index="toughness" value="3" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<idcard-modifier idcard="creature" operation="or" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</idcard-modifier>
				</add-modifier>
				<target type='you'/>
				<action ref='draw-a-card'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
