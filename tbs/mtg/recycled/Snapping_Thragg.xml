<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Snapping Thragg">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4r
	creature - beast
	3/3
	whenever snapping thragg deals combat damage to a player, you may have it deal 3 damage to target creature that player controls.
	morph 4rr 
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>beast </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<and>
						<is-face-up card="this"/>
						<is-this/>
					</and>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<cost>
				<action ref='target-creature'>
					<test>
						<controller player="context.player"/>
					</test>
				</action>
			</cost>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<assign-damage type='damage-normal' value="3"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana red='2' colorless='4' />
			</actions>
		</ability>
	</abilities>
</card>
