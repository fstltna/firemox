<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Aisling Leprechaun">
	<rules-author-comment></rules-author-comment>

	<!--  g 
		whenever aisling leprechaun blocks or becomes blocked by a creature, that 
		creature becomes green.    
	-->

	<init>
		<registers>
			<register index="green" value="1" />
			<register index="power" value="1" />
			<register index="toughness" value="1" />
		</registers>
		<colors>green</colors>
		<idcards>creature</idcards>
		<properties>faerie</properties>
	</init>
	<abilities>
		<ability ref="cast-spell" />
		<triggered-ability zone="play">
			<declared-blocking>
				<blocking-test>
					<is-this />
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="context.card2" />
				<add-modifier>
					<color-modifier color="green" linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
					</color-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
		<triggered-ability zone="play">
			<declared-blocking>
				<attacking-test>
					<is-this />
				</attacking-test>
			</declared-blocking>
			<effects>
				<target type="context.card2" />
				<add-modifier>
					<color-modifier color="green" linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
					</color-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
