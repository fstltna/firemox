<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Pardic Swordsmith">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2r
	creature - dwarf
	1/1
	r, discard a card at random: pardic swordsmith gets +2/+0 until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>dwarf </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' />
				<action ref='discard-random' value="1"/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
