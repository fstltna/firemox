<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Muscle Burst">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	instant
	target creature gets +x/+x until end of turn, where x is 3 plus the number of cards named muscle burst in all graveyards.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<add right="3">
								<left>
									<counter restriction-zone="graveyard">
										<has-name name="muscle_burst"/>
									</counter>
								</left>
							</add>
						</value>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<add right="3">
								<left>
									<counter restriction-zone="graveyard">
										<has-name name="muscle_burst"/>
									</counter>
								</left>
							</add>
						</value>
					</register-modifier>
				</add-modifier>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
