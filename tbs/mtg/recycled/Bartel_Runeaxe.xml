<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Bartel Runeaxe">
<rules-author-comment>By Fabdouglas</rules-author-comment>

<!--  {3}{b}{r}{g} 
bartel runeaxe can't be the target of enchant creature spells. 
attacking doesn't cause bartel to tap. -->
	<init>
		<registers>
			<register index="colorless" value="3"/>
			<register index="black" value="1"/>
			<register index="red" value="1"/>
			<register index="green" value="1"/>
			<register index="power" value="6"/>
			<register index="toughness" value="5"/>
		</registers>
		<colors>black red green</colors>
		<idcards>creature </idcards>
		<properties>legend human warrior vigilance untargetable-by-enchant</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
	</abilities>
</card>
