<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Night Soil">
	<rules-author-comment>riclas</rules-author-comment>

	<!--
		gg
		enchantment
		1, remove two creature cards in a single graveyard from the game: put a 1/1 green saproling creature token into play.
	-->

	<init>
		<registers>
			<register index='green' value='2' />
		</registers>
		<colors>green</colors>
		<idcards>global-enchantment</idcards>
	</init>
	<abilities>
		<ability ref='cast-spell' />
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
				<action ref="choose-player" />
				<repeat value="2" />
				<target type="card" mode="choose" restriction-zone="graveyard">
					<test>
						<controller player="target-list.first" />
					</test>
				</target>
				<action ref="remove-from-game" />
			</cost>
			<effects>
				<create-card>
					<card name='Saproling'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1' />
								<register index='toughness' value='1' />
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token saproling</properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play' />
			</effects>
		</activated-ability>
	</abilities>
</card>
