<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Infested Roothold">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4g
	creature - wall
	0/3
	defender 
	protection from artifacts
	whenever an opponent plays an artifact spell, you may put a 1/1 green insect creature token into play.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='0'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>wall defender protection-from-artifacts </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<and>
						<has-idcard idcard="artifact"/>
						<controller player="opponent"/>
					</and>
				</test>
			</casting>
			<effects>
				<choice cancel="true" controller="you">
					<either>
						<repeat value='1'/>
						<create-card>
							<card name='Insect'>
								<rules-author-comment></rules-author-comment>
								<init>
									<registers>
										<register index='power' value='1'/>
										<register index='toughness' value='1'/>
									</registers>
									<colors>green</colors>
									<idcards>creature</idcards>
									<properties>token insect </properties>
								</init>
							</card>
						</create-card>
						<move-card controller='you' destination='play'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
