<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Gruul War Plow">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4
	artifact
	creatures you control have trample.
	1rg: gruul war plow becomes a 4/4 juggernaut artifact creature until end of turn.
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
	</init>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<property-modifier property="trample" linked="true" layer="global"/>			 		
			</modifiers>
			<while>
		 		<and>
			 		<controller player="you"/>
			 		<has-idcard idcard="creature"/>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
	<abilities>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' green='1' colorless='1' />
			</cost>
			<effects>
				<target type="this"/>
				<add-modifier>
					<register-indirection index="power" value="4" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<register-indirection index="toughness" value="4" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<idcard-modifier idcard="artifact-creature" operation="or" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</idcard-modifier>
					<property-modifier property="juggernaut" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
