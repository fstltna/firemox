<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Oblivion Crown">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1b
	enchantment - aura
	flash 
	enchant creature
	enchanted creature has "discard a card: this creature gets +1/+1 until end of turn."
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura flash </properties>
	</init>
	<abilities>
		<ability ref="cast-enchant-flash"/>
	</abilities>
	<attachment ref='enchant-creature'>
		<modifiers>
			<ability-modifier operation="add" linked="true">
				<abilities>
					<activated-ability playable='instant' name='' zone='play'>
						<cost>
							<action ref='discard' value='1'/>
						</cost>
						<effects>
							<action ref="gain+1+1-until-eot"/>
						</effects>
					</activated-ability>
				</abilities>
			</ability-modifier>
		</modifiers>
	</attachment>
</card>
