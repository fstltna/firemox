<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Reliquary Monk">
	<rules-author-comment>riclas</rules-author-comment>

	<!--
		2w
		
		creature - cleric
		
		2/2
		
		when reliquary monk is put into a graveyard from play, destroy target artifact or enchantment.
	-->


	<init>
		<registers>
			<register index="white" value="1" />
			<register index="colorless" value="2" />
			<register index="power" value="2" />
			<register index="toughness" value="2" />
		</registers>
		<colors>white</colors>
		<idcards>creature</idcards>
		<properties>human monk cleric</properties>
	</init>
	<abilities>
		<ability ref="cast-spell" />
		<triggered-ability zone="graveyard">
			<moved-card>
				<source-test>
					<and>
						<is-this />
						<in-zone zone="play" card="tested" />
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="graveyard" card="tested" />
				</destination-test>
			</moved-card>
			<effects>
				<action ref="target-card">
					<test>
						<or>
							<test ref="is-targetable-artifact" />
							<test ref="is-targetable-enchantment" />
						</or>
					</test>
				</action>
				<action ref="destroy" />
			</effects>
		</triggered-ability>
	</abilities>
</card>
