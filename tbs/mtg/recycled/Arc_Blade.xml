<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Arc Blade">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3rr
	sorcery
	arc blade deals 2 damage to target creature or player. remove arc blade from the game with three time counters on it.
	suspend 3-2r 
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='3'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<ability ref='cast-suspend'>
			<actions>
				<pay-mana red='1' colorless='2' />
			</actions>
			<actions>
				<repeat value='3'/>
				<add-object object-name='time'/>
			</actions>
		</ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='2' type='damage-normal'/>
				<target-list operation="clear" />
				<target type="this" />
				<action ref="remove-from-game" />
				<repeat value='3'/>
				<add-object object-name='time'/>
				<target-list operation="clear" />
				<target type="this" />
				<add-modifier>
					<ability-modifier linked="false" operation="add" layer="global">
						<abilities>
							<ability ref="suspend" />
							<ability ref="suspend-trigger" />
							<activated-ability name="suspend-play" playable="instant"
								zone="side">
								<test>
									<equal left="suspend-triggered">
										<right>
											<and left="suspend-triggered">
												<right register="this"
													index="special-abilities" />
											</and>
										</right>
									</equal>
								</test>
								<effects>
									<action ref="put-in-play" />
								</effects>
							</activated-ability>
						</abilities>
					</ability-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
