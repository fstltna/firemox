<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Child of Gaea">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3ggg
	creature - elemental
	7/7
	trample
	at the beginning of your upkeep, sacrifice child of gaea unless you pay gg.
	1g: regenerate child of gaea.
 -->

	<init>
		<registers>
			<register index='green' value='3'/>
			<register index='colorless' value='3'/>
			<register index='power' value='7'/>
			<register index='toughness' value='7'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elemental trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana green='2'/>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' colorless='1' />
			</cost>
			<effects>
				<action ref='regenerate'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
