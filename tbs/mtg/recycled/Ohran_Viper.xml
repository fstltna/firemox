<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Ohran Viper">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1gg
	snow creature - snake
	1/3
	whenever ohran viper deals combat damage to a creature, destroy that creature at end of combat.
	whenever ohran viper deals combat damage to a player, you may draw a card.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>snow snake </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<and>
						<not>
							<is-player/>
						</not>
						<has-idcard idcard='creature'/>
					</and>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="context.card"/>
				<action ref='destroy-target-eoc'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<target type='you'/>
						<action ref='draw-a-card'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
