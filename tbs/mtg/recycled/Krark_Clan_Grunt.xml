<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Krark-Clan Grunt">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2r
	creature - goblin warrior
	2/2
	sacrifice an artifact: krark-clan grunt gets +1/+0 and gains first strike until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin warrior </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='sacrifice-an-artifact' value='1'/>
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
