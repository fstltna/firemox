<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Clockwork Hydra">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5
	artifact creature - hydra
	0/0
	clockwork hydra comes into play with four +1/+1 counters on it.
	whenever clockwork hydra attacks or blocks, remove a +1/+1 counter from it. if you do, clockwork hydra deals 1 damage to target creature or player.
	t :put a +1/+1 counter on clockwork hydra.
 -->

	<init>
		<registers>
			<register index='colorless' value='5'/>
			<register index='power' value='0'/>
			<register index='toughness' value='0'/>
		</registers>
		<colors></colors>
		<idcards>artifact-creature </idcards>
		<properties>hydra </properties>
	</init>
	<modifiers>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
	</modifiers>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<cost>
				<target type="this"/>
				<remove-object object-name="+1/+1"/>
				<target-list operation="clear"/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<cost>
				<target type="this"/>
				<remove-object object-name="+1/+1"/>
				<target-list operation="clear"/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
			</cost>
			<effects>
				<target type='this'/>
				<add-object object-name='+1/+1'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
