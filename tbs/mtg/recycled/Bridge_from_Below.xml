<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Bridge from Below">
<rules-author-comment>riclas</rules-author-comment>

<!--
		bbb
	enchantment
	whenever a nontoken creature is put into your graveyard from play, if bridge from below is in your graveyard, put a 2/2 black zombie creature token into play.
	when a creature is put into an opponent's graveyard from play, if bridge from below is in your graveyard, remove bridge from below from the game.
 -->

	<init>
		<registers>
			<register index='black' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<not>
							<has-property property="token"/>
						</not>
						<has-idcard idcard="creature"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<and>
						<in-zone zone='graveyard' card='tested'/>
						<controller player="you"/>
					</and>
				</destination-test>
			</moved-card>
			<effects>
				<if-then-hop elsehop="3">
					<test>
						<has restriction-zone="graveyard">
							<and>
								<controller player="you"/>
								<is-this/>
							</and>
						</has>
					</test>
				</if-then-hop>
				<create-card>
					<card name='Zombie'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='2'/>
								<register index='toughness' value='2'/>
							</registers>
							<colors>black</colors>
							<idcards>creature</idcards>
							<properties>token zombie </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="creature"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<and>
						<in-zone zone='graveyard' card='tested'/>
						<not>
							<controller player="you"/>
						</not>
					</and>
				</destination-test>
			</moved-card>
			<effects>
				<if-then-hop elsehop="3">
					<test>
						<has restriction-zone="graveyard">
							<and>
								<controller player="you"/>
								<is-this/>
							</and>
						</has>
					</test>
				</if-then-hop>
				<target type="this"/>
				<action ref="remove-from-game"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
