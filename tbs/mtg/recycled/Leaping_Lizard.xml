<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Leaping Lizard">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1gg
	creature - lizard
	2/3
	1g: leaping lizard gains flying and gets -0/-1 until end of turn.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>lizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' colorless='1' />
			</cost>
			<effects>
				<target type="this"/>
				<add-modifier>
					<register-modifier index='toughness' value='1' operation='minus' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='flying' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
