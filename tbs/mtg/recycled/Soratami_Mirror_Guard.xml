<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Soratami Mirror-Guard">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3u
	creature - moonfolk wizard
	3/1
	flying
	2, return a land you control to its owner's hand: target creature with power 2 or less is unblockable this turn.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='3'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>moonfolk wizard flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='2' />
				<action ref="target-land">
					<test>
						<controller player="you"/>
					</test>
				</action>
				<action ref='return-to-hand'/>
				<action ref="target-creature">
					<test>
						<inf-equal right="2">
							<left register="tested" index="power"/>
						</inf-equal>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="unblockable-until-eot"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
