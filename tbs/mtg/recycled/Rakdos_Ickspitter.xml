<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Rakdos Ickspitter">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1br
	creature - thrull
	1/1
	t :rakdos ickspitter deals 1 damage to target creature and that creature's controller loses 1 life.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red black </colors>
		<idcards>creature </idcards>
		<properties>thrull </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
				<target type="target-list.first.controller"/>
				<action ref='lose-life-target' value='1'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
