<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Spike Drone">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	creature - spike
	0/0
	spike drone comes into play with a +1/+1 counter on it.
	2, remove a +1/+1 counter from spike drone: put a +1/+1 counter on target creature.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='power' value='0'/>
			<register index='toughness' value='0'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>spike drone</properties>
	</init>
	<modifiers>
		<object name="+1/+1"/>
	</modifiers>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='2' />
				<target type="this"/>
				<remove-object object-name="+1/+1"/>
				<target-list operation="clear"/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-object object-name='+1/+1'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
