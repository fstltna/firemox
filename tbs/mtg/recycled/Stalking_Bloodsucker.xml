<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Stalking Bloodsucker">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4bb
	creature - vampire
	4/4
	flying
	1b, discard a card: stalking bloodsucker gets +2/+2 until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>vampire flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana black='1' colorless='1' />
				<action ref='discard' value="1"/>
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
