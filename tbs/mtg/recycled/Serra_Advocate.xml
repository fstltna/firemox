<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Serra Advocate">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3w
	creature - angel
	2/2
	flying
	t :target attacking or blocking creature gets +2/+2 until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>angel flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'>
					<test>
						<or>
							<test ref='tested-is-attacking'/>
							<test ref='tested-is-blocking'/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
