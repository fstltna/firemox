<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Goblin Marshal">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4rr
	creature - goblin
	3/3
	echo 4rr 
	when goblin marshal comes into play or is put into a graveyard from play, put two 1/1 red goblin creature tokens into play.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin warrior</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='echo'>
			<actions>
				<pay-mana red='2' colorless='4' />
			</actions>
		</ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Goblin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>red</colors>
							<idcards>creature</idcards>
							<properties>token goblin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Goblin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>red</colors>
							<idcards>creature</idcards>
							<properties>token goblin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
