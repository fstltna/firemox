<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Feast of Flesh">
<rules-author-comment>riclas</rules-author-comment>

<!--
		b
	sorcery
	feast of flesh deals x damage to target creature and you gain x life, where x is 1 plus the number of cards named feast of flesh in all graveyards.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<assign-damage type='damage-normal'>
					<value>
						<add right="1">
							<left>
								<counter restriction-zone="graveyard">
									<has-name name="feast_of_flesh"/>
								</counter>
							</left>
						</add>
					</value>
				</assign-damage>
				<action ref='gain-life'>
					<value>
						<add right="1">
							<left>
								<counter restriction-zone="graveyard">
									<has-name name="feast_of_flesh"/>
								</counter>
							</left>
						</add>
					</value>
				</action>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
