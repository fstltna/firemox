<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Crucible of Worlds">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3
	artifact
	you may play land cards from your graveyard.
 -->

	<init>
		<registers>
			<register index='colorless' value='3'/>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="graveyard">
			<modifiers>
				<ability-modifier linked="true" layer="global">
					<abilities>
						<activated-ability playable="this" resolution="auto" zone="graveyard" name="play-land">
							<test>
								<sup right="0">
									<left register="currentplayer" index="land-remain-to-cast" />
								</sup>
							</test>
							<effects>
								<action ref="put-in-play" />
							</effects>
						</activated-ability>
					</abilities>
				</ability-modifier>
			</modifiers>
			<while>
				<has-idcard idcard="land"/>
			</while>
		</static-modifier>
	</modifiers>
</card>
