<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Uktabi Kong">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5ggg
	creature - ape
	8/8
	trample
	when uktabi kong comes into play, destroy all artifacts.
	tap two untapped apes you control: put a 1/1 green ape creature token into play.
 -->

	<init>
		<registers>
			<register index='green' value='3'/>
			<register index='colorless' value='5'/>
			<register index='power' value='8'/>
			<register index='toughness' value='8'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>ape trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='card' mode='all' restriction-zone='play'>
					<test>
						<has-idcard idcard="artifact"/>
					</test>
				</target>
				<action ref='destroy'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<repeat value="2"/>
				<action ref="target-creature">
					<test>
						<and>
							<controller player="you"/>
							<has-property property="ape"/>
							<in-zone zone="playANDuntapped"/>
						</and>
					</test>
				</action>
				<tap/>
			</cost>
			<effects>
				<create-card>
					<card name='Ape'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token ape </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
