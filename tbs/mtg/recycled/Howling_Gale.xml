<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Howling Gale">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	instant
	howling gale deals 1 damage to each creature with flying and each player.
	flashback 1g 
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>instant </idcards>
	</init>
	<actions>
		<action reference-name='main-effects'>
			<action ref="all-creatures">
				<test>
					<has-property property="flying"/>
				</test>
			</action>
			<target type="player" mode="all"/>	
			<assign-damage value='1' type='damage-normal'/>
		</action>
	</actions>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='flashback%a' zone='graveyard'>
			<cost>
				<pay-mana green='1' colorless='1' />
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref='flashback'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
