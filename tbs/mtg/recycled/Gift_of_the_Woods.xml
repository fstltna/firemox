<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Gift of the Woods">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	enchantment - aura
	enchant creature
	whenever enchanted creature blocks or becomes blocked, it gets +0/+3 until end of turn and you gain 1 life.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this card="attachedto"/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="attachedto"/>
				<add-modifier>
					<register-modifier index='toughness' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
				<action ref='gain-life' value='1'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-blocking>
				<attacking-test>
					<is-this card="attachedto"/>
				</attacking-test>
			</declared-blocking>
			<effects>
				<target type="attachedto"/>
				<add-modifier>
					<register-modifier index='toughness' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
				<action ref='gain-life' value='1'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<valid-target ref='valid-creature-to-enchant' />
		<valid-attachment ref='valid-enchant-creature' />
	</attachment>
</card>
