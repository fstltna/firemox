<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Lightning Greaves">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2
	artifact - equipment
	equipped creature has haste and shroud. 
	equip 0 
 -->

	<init>
		<registers>
			<register index='colorless' value='2'/>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
		<properties>equipment </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='this' zone='play'>
			<cost>
				<pay-mana />
				<action ref='target-equipable-creature' />
			</cost>
			<effects>
				<action ref='equip' />
			</effects>
		</activated-ability>
	</abilities>
	<attachment>
		<modifiers>
			<property-modifier property="haste" linked="true" />
			<property-modifier property="shroud" linked="true" />
		</modifiers>
		<valid-target ref='valid-creature-to-equip' />
		<valid-attachment ref='valid-equip-creature' />
	</attachment>
</card>
