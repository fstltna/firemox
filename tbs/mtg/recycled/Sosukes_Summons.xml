<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Sosuke's Summons">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	sorcery
	put two 1/1 green snake creature tokens into play.
	whenever a nontoken snake comes into play under your control, you may return sosuke's summons from your graveyard to your hand.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Snake'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token snake </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
						<not>
							<has-property property="token"/>
						</not>
						<has-property property="snake"/>
					</and>
				</source-test>
				<destination-test>
					<and>
						<controller player="you"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<target type="this"/>
						<action ref='return-to-hand'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
