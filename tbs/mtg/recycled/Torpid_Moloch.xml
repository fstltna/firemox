<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Torpid Moloch">
<rules-author-comment>riclas</rules-author-comment>

<!--
		r
	creature - lizard
	3/2
	defender 
	sacrifice three lands: torpid moloch loses defender until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>lizard defender </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='sacrifice-a-land' value="3"/>
			</cost>
			<effects>
				<target type="this"/>
				<add-modifier>
				<property-modifier property="defender" linked="false" operation="remove">
					<until>
						<end-of-phase phase="cleanup" />
					</until>
				</property-modifier>
			</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
