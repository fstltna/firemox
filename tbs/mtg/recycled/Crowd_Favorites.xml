<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Crowd Favorites">
<rules-author-comment>riclas</rules-author-comment>

<!--
		6w
	creature - soldier
	4/4
	3w: tap target creature.
	3w: crowd favorites gets +0/+5 until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='6'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='3' />
				<action ref='target-creature'/>
			</cost>
			<effects>
				<tap/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='3' />
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='toughness' value='5' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
