<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Goblin Dynamo">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5rr
	creature - goblin mutant
	4/4
	t :goblin dynamo deals 1 damage to target creature or player.
	xr, t, sacrifice goblin dynamo: goblin dynamo deals x damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='5'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin mutant </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' />
				<action ref="pay-x"/>
				<action ref='T'/>
				<action ref='sacrifice-this'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage type='damage-normal'>
					<value register='stack' index='0'/>
				</assign-damage>
			</effects>
		</activated-ability>
	</abilities>
</card>
