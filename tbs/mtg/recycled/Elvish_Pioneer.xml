<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Elvish Pioneer">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	creature - elf druid
	1/1
	when elvish pioneer comes into play, you may put a basic land card from your hand into play tapped.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf druid </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<target type="card" mode="choose" raise-event="true" restriction-zone="hand">
							<test>
								<and>
									<controller player="you"/>
									<test ref="is-basic-land"/>
								</and>
							</test>
						</target>
						<move-card controller="you" destination="playANDtapped"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
