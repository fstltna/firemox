<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Silkwing Scout">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	creature - faerie scout
	2/1
	flying
	g, sacrifice silkwing scout: search your library for a basic land card and put that card into play tapped. then shuffle your library.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>faerie scout flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<action ref='search-lib' value="1">
					<test>
						<test ref="is-basic-land"/>
					</test>
				</action>
				<move-card destination="playANDtapped" controller="you"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
