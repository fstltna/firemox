<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Deathmask Nezumi">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - rat shaman
	2/2
	as long as you have seven or more cards in hand, deathmask nezumi gets +2/+1 and has fear.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>rat shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<register-modifier index="power" operation="add" value="2">
			<while>
				<sup-equal right="7">
					<left>
						<counter restriction-zone="hand">
							<controller player="you" />
						</counter>
					</left>
				</sup-equal>
			</while>
		</register-modifier>
		<register-modifier index="toughness" operation="add" value="1">
			<while>
				<sup-equal right="7">
					<left>
						<counter restriction-zone="hand">
							<controller player="you" />
						</counter>
					</left>
				</sup-equal>
			</while>
		</register-modifier>
		<property-modifier property="fear">
			<while>
				<sup-equal right="7">
					<left>
						<counter restriction-zone="hand">
							<controller player="you" />
						</counter>
					</left>
				</sup-equal>
			</while>
		</property-modifier>
	</modifiers>
</card>
