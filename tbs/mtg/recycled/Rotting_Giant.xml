<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Rotting Giant">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1b
	creature - zombie giant
	3/3
	whenever rotting giant attacks or blocks, sacrifice it unless you remove a card in your graveyard from the game.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>zombie giant </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='sacrifice-this'/>
					</either>
					<either>
						<target type="you"/>
						<action ref="remove-a-card-from-graveyard"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='sacrifice-this'/>
					</either>
					<either>
						<target type="you"/>
						<action ref="remove-a-card-from-graveyard"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
