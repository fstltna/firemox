<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Spellgorger Barbarian">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3r
	creature - nightmare barbarian
	3/1
	when spellgorger barbarian comes into play, discard a card at random.
	when spellgorger barbarian leaves play, draw a card.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='3'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>human nightmare barbarian </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref='discard-random' value="1"/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<in-zone zone='play' card='tested'/>
				</source-test>
			</moved-card>
			<effects>
				<target type='you'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
