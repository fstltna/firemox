<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kami of the Waning Moon">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - spirit
	1/1
	flying
	whenever you play a spirit or arcane spell, target creature gains fear until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>spirit flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<and>
						<or>
							<has-property property="spirit" />
							<has-property property="arcane" />
						</or>
						<controller player="you"/>
					</and>
				</test>
			</casting>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="fear-until-eot"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
