<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Oppressive Will">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	instant
	counter target spell unless its controller pays 1 for each card in your hand.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-spell'/>
			</cost>
			<effects>
				<choice cancel="false" controller="target-list.first.controller">
					<either>
						<action ref= "counter"/>
					</either>
					<either>
						<pay-mana controller="target-list.first.controller">
							<colorless>
								<counter restriction-zone="hand">
									<controller player="you"/>
								</counter>
							</colorless>
						</pay-mana>
					</either>
				</choice>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
