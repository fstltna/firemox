<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Akroma's Blessing">
<rules-author-comment></rules-author-comment>

<!--  {2}{w} creatures you control gain protection from the color of your choice until end of turn. 
cycling {w}  -->
	<init>
		<registers>
			<register index="colorless" value="2"/>
			<register index="white" value="1"/>
		</registers>
		<colors>white</colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable="this" name="" zone="hand">
			<cost>
				<pay-mana value="manacost"/>
			</cost>
			<effects>
				<input-color controller="you" operation="set" register="stack" index="0"/>
				<action ref="all-creatures">
					<test>
						<controller player="you"/>
					</test>
				</action>
				<add-modifier>
					<property-modifier live-update="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
						<property>
							<or left="protection-from-color">
								<right register="stack" index="0"/>
							</or>
						</property>
					</property-modifier>
				</add-modifier>
				<action ref="finish-spell"/>
			</effects>
		</activated-ability>
		<ability ref="cycling">
			<actions>
				<pay-mana white="1" />
			</actions>
		</ability>
	</abilities>
</card>
