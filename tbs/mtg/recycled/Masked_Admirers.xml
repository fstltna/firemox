<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Masked Admirers">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2gg
	creature - elf shaman
	3/2
	when masked admirers comes into play, draw a card.
	whenever you play a creature spell, you may pay gg. if you do, return masked admirers from your graveyard to your hand.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='3'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>elf shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='you'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='graveyard'>
			<casting>
				<test>
					<and>
						<controller player="you"/>
						<has-idcard idcard="creature"/>
					</and>
				</test>
			</casting>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<pay-mana green="2"/>
						<target type="this"/>
						<action ref='return-to-hand'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
