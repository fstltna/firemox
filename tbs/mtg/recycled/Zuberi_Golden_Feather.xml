<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Zuberi, Golden Feather">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4w
	legendary creature - griffin
	3/3
	flying
	other griffin creatures get +1/+1.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>legend griffin flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
			 	<register-modifier index="power" operation="add" value="1" linked="true" layer="global"/>			 		
			 	<register-modifier index="toughness" operation="add" value="1" linked="true" layer="global"/>
			</modifiers>
			<while>
		 		<and>
					<has-property property="griffin"/>
			 		<has-idcard idcard="creature"/>
					<not>
						<is-this/>
					</not>
		 		</and>
			</while>
		</static-modifier>
	</modifiers>
</card>
