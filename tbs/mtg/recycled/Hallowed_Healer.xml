<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Hallowed Healer">
	<rules-author-comment></rules-author-comment>

	<!--  {2}{w} 
		{t}: prevent the next 2 damage that would be dealt to target creature or player this turn. 
		
		threshold - {t}: 
		prevent the next 4 damage that would be dealt to target creature or player this turn.  -->

	<init>
		<registers>
			<register index="colorless" value="2" />
			<register index="white" value="1" />
			<register index="power" value="1" />
			<register index="toughness" value="1" />
		</registers>
		<colors>white</colors>
		<idcards>creature</idcards>
		<properties>human cleric</properties>
	</init>
	<abilities>
		<ability ref="cast-spell" />
		<activated-ability playable="instant" name="" zone="play">
			<cost>
				<action ref="T" />
				<action ref="target-dealtable" />
			</cost>
			<effects>
				<action ref="prevent-2" />
			</effects>
		</activated-ability>
		<activated-ability playable="instant" name="" zone="play">
			<test ref="threshold" />
			<cost>
				<action ref="T" />
				<action ref="target-dealtable" />
			</cost>
			<effects>
				<action ref="prevent-4" />
			</effects>
		</activated-ability>
	</abilities>
</card>
