<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Orochi Ranger">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	creature - snake warrior
	2/1
	whenever orochi ranger deals combat damage to a creature, tap that creature and it doesn't untap during its controller's next untap step.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>snake warrior </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<is-this/>
				</source-test>
				<destination-test>
					<has-idcard idcard='creature'/>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="context.card"/>
				<tap/>
				<action ref="does-not-untap-next-untap"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
