<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Funeral Charm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		b
	instant
	choose one - target player discards a card; or target creature gets +2/-1 until end of turn; or target creature gains swampwalk until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-player'/>
			</cost>
			<effects>
				<action ref='player-discard' value="1"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="add+2-1-until-eot"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='swampwalk' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
