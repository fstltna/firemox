<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Unlikely Alliance">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1w
	enchantment
	1w: target nonattacking, nonblocking creature gets +0/+2 until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='1' />
				<action ref='target-creature'>
					<test>
						<and>
							<not>
								<test ref="tested-is-attacking"/>
							</not>
							<not>
								<test ref="tested-is-blocking"/>
							</not>
						</and>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='toughness' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
