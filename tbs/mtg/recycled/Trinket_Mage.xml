<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Trinket Mage">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	creature - human wizard
	2/2
	when trinket mage comes into play, you may search your library for an artifact card with converted mana cost 1 or less, reveal that card, and put it into your hand. if you do, shuffle your library.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>human wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<action ref='search-lib-reveal' value="1">
							<test>
								<and>
									<inf-equal right="1">
										<left register="tested" index="manacost"/>
									</inf-equal>
									<has-idcard idcard='artifact'/>
								</and>
							</test>
						</action>
						<action ref='return-to-hand'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
