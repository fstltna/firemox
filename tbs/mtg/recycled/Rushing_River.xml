<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Rushing River">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	instant
	kicker-sacrifice a land. 
	return target nonland permanent to its owner's hand. if the kicker cost was paid, return another target nonland permanent to its owner's hand.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<ability ref="cast-spell-kicker">
			<actions>
				<action ref='sacrifice-a-land' value='1'/>
				<action ref="target-permanent">
					<test>
						<not>
							<has-idcard idcard="land"/>
						</not>
					</test>
				</action>
				<action ref="target-permanent">
					<test>
						<not>
							<has-idcard idcard="land"/>
						</not>
					</test>
				</action>
			</actions>
			<actions>
				<action ref='return-to-hand'/>
				<action ref='finish-spell'/>
			</actions>
		</ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref="target-permanent">
					<test>
						<not>
							<has-idcard idcard="land"/>
						</not>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='return-to-hand'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
