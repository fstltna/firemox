<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Resilient Wanderer">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2ww
	creature - nomad
	2/3
	first strike
	discard a card: resilient wanderer gains protection from the color of your choice until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human nomad first-strike </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='discard' value="1"/>
			</cost>
			<effects>
				<target type='this'/>
				<input-color controller="you" operation="set" register="stack" index="0"/>
				<add-modifier>
					<property-modifier live-update="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
						<property>
							<or left="protection-from-color">
								<right register="stack" index="0"/>
							</or>
						</property>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
