<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Evincar's Justice">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2bb
	sorcery
	buyback 3 
	evincar's justice deals 2 damage to each creature and each player.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<target mode="all" type="player"/>
				<action ref="all-creatures"/>
			</cost>
			<effects>
				<assign-damage value='2' type='damage-normal'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<pay-mana colorless='3' />
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
