		<registers>
		</registers>
		<idcards>land </idcards>
	</init>
	<abilities>
		<ability ref="cast-land"/>
		<ability ref="tap-add-C"/>
		<activated-ability playable="this" name="" zone="play">
			<cost>
				<pay-mana colorless="3" />
				<action ref="T"/>
				<action ref="target-land">
					<test ref="is-nonbasic-land"/>
				</action>
			</cost>
			<effects>
				<action ref="destroy"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
