<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Alpha Kavu">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - kavu
	2/2
	1g: target kavu gets -1/+1 until end of turn.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>kavu </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' colorless='1' />
				<action ref='target-creature'>
					<test>
						<has-property property="kavu"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='1' operation='minus' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
