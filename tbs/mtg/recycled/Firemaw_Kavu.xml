<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Firemaw Kavu">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5r
	creature - kavu
	4/2
	echo 5r 
	when firemaw kavu comes into play, it deals 2 damage to target creature.
	when firemaw kavu leaves play, it deals 4 damage to target creature.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='5'/>
			<register index='power' value='4'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>kavu </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='echo'>
			<actions>
				<pay-mana red='1' colorless='5' />
			</actions>
		</ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<assign-damage value='2' type='damage-normal'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<in-zone zone='play' card='tested'/>
				</source-test>
			</moved-card>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<assign-damage value='4' type='damage-normal'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
