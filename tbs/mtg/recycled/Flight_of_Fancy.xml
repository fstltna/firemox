<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Flight of Fancy">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3u
	enchantment - aura
	enchant creature
	when flight of fancy comes into play, draw two cards.
	enchanted creature has flying.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='3'/>
		</registers>
		<colors>blue </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='you'/>
				<repeat value='2'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<modifiers>
			<property-modifier property='flying' linked='true'/>
		</modifiers>
		<valid-target ref='valid-creature-to-enchant' />
		<valid-attachment ref='valid-enchant-creature' />
	</attachment>
</card>
