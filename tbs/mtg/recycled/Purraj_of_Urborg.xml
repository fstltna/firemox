<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Purraj of Urborg">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	legendary creature - cat warrior
	2/3
	whenever purraj of urborg attacks, it gains first strike until end of combat.
	whenever a player plays a black spell, you may pay b. if you do, put a +1/+1 counter on purraj of urborg.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>legend cat warrior </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<target type="this"/>
				<action ref="first-strike-until-eot"/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<has-color color="black"/>
				</test>
			</casting>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<pay-mana black="1"/>
						<target type='this'/>
						<add-object object-name='+1/+1'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
