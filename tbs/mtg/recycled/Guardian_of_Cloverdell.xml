<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Guardian of Cloverdell">
<rules-author-comment>riclas</rules-author-comment>

<!--
		5gg
	creature - treefolk shaman
	4/5
	when guardian of cloverdell comes into play, put three 1/1 white kithkin soldier creature tokens into play.
	g, sacrifice a kithkin: you gain 1 life.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='5'/>
			<register index='power' value='4'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>treefolk shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='3'/>
				<create-card>
					<card name='Kithkin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token kithkin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-a-permanent' value='1'>
					<test>
						<has-property property='kithkin'/>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='gain-life' value='1'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
