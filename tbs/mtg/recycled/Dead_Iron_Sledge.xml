<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Dead-Iron Sledge">
	<rules-author-comment></rules-author-comment>

	<!--  {1} 
		whenever equipped creature blocks or becomes blocked by a creature, 
		destroy that creature and equipped creature. equip {2}  -->
	<init>
		<registers>
			<register index="colorless" value="1" />
		</registers>
		<colors></colors>
		<idcards>artifact</idcards>
		<properties>equipment</properties>
	</init>
	<abilities>
		<activated-ability playable='this' zone='play'>
			<cost>
				<pay-mana colorless='2' />
				<action ref='target-equipable-creature' />
			</cost>
			<effects>
				<action ref='equip' />
			</effects>
		</activated-ability>
	</abilities>
	<attachment>
		<modifiers>
			<ability-modifier operation='add' linked='true'>
				<abilities>
					<triggered-ability zone="play">
						<declared-blocking>
							<attacking-test>
								<is-this />
							</attacking-test>
						</declared-blocking>
						<effects>
							<target type="context.card" />
							<target type="context.card2" />
							<action ref="destroy" />
						</effects>
					</triggered-ability>
					<triggered-ability zone="play">
						<declared-blocking>
							<blocking-test>
								<is-this />
							</blocking-test>
						</declared-blocking>
						<effects>
							<target type="context.card" />
							<target type="context.card2" />
							<action ref="destroy" />
						</effects>
					</triggered-ability>
				</abilities>
			</ability-modifier>
		</modifiers>
		<valid-target ref='valid-creature-to-equip' />
		<valid-attachment ref='valid-equip-creature' />
	</attachment>
</card>
