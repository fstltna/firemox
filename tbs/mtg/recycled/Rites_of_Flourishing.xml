<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Rites of Flourishing">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	enchantment
	at the beginning of each player's draw step, that player draws a card.
	each player may play an additional land on each of his or her turns.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='draw'/>
			<effects>
				<target type='currentplayer'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone="play" resolution="hidden">
			<before-phase phase="untap"/>
			<effects>
				<modify-register register="currentplayer" index="land-remain-to-cast" operation="add" value="1"/>
			</effects>
		</triggered-ability>
		
		<triggered-ability zone="play" resolution="hidden">
			<moved-card>
				<source-test>
					<and>
						<in-zone zone="play"/>
						<is-this/>
					</and>
				</source-test>
				<destination-test>
					<not>
						<in-zone zone="play"/>
					</not>
				</destination-test>
			</moved-card>
			<effects>
				<modify-register register="currentplayer" index="land-remain-to-cast" operation="minus" value="1"/>
			</effects>
		</triggered-ability>

		<triggered-ability zone="play" resolution="hidden">
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone="play"/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play"/>
				</destination-test>
			</moved-card>
			<effects>
				<unregister-this/>
				<modify-register register="currentplayer" index="land-remain-to-cast" operation="add" value="1"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
