<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Karstoderm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2gg
	creature - beast
	0/0
	karstoderm comes into play with five +1/+1 counters on it.
	whenever an artifact comes into play, remove a +1/+1 counter from karstoderm.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='0'/>
			<register index='toughness' value='0'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>beast </properties>
	</init>
	
	<modifiers>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
		<object name="+1/+1"/>
	</modifiers>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="artifact"/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="this"/>
				<remove-object object-name="+1/+1"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
