<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Akki Blizzard-Herder">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	creature - goblin shaman
	1/1
	when akki blizzard-herder is put into a graveyard from play, each player sacrifices a land.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin shaman </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="sacrifice-a-land" value="1"/>
				<action ref="opponent-sacrifice-a-land" value="1"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
