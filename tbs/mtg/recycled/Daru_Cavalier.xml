<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Daru Cavalier">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3w
	creature - soldier
	2/2
	first strike
	when daru cavalier comes into play, you may search your library for a card named daru cavalier, reveal it, and put it into your hand. if you do, shuffle your library.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human soldier first-strike </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<action ref='search-lib-reveal' value="1">
							<test>
								<has-name name="daru_cavalier"/>
							</test>
						</action>
						<action ref='return-to-hand'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
