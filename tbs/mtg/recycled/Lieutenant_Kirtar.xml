<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Lieutenant Kirtar">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1ww
	legendary creature - bird soldier
	2/2
	flying
	1w, sacrifice lieutenant kirtar: remove target attacking creature from the game.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>legend bird soldier flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='1' />
				<action ref='sacrifice-this'/>
				<action ref='target-creature'>
					<test>
						<test ref="tested-is-attacking"/>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="remove-from-game"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
