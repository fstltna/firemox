<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Yawgmoth Demon">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4bb
	creature - demon
	6/6
	flying 
	first strike 
	at the beginning of your upkeep, you may sacrifice an artifact. if you don't, tap yawgmoth demon and it deals 2 damage to you.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='6'/>
			<register index='toughness' value='6'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>demon flying first-strike </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='sacrifice-an-artifact' value='1'/>
					</either>
					<either>
						<target type='this'/>
						<tap/>
						<target-list operation="clear"/>
						<target type='you'/>
						<assign-damage value='2' type='damage-normal'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
