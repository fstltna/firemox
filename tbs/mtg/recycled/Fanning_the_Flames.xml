<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Fanning the Flames">
<rules-author-comment>riclas</rules-author-comment>

<!--
		xrr
	sorcery
	buyback 3 
	fanning the flames deals x damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref="pay-x"/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage type='damage-normal'>
					<value register='stack' index='0'/>
				</assign-damage>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<pay-mana colorless='3' />
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
