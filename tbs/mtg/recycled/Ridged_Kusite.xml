<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Ridged Kusite">
<rules-author-comment>riclas</rules-author-comment>

<!--
		b
	creature - horror spellshaper
	1/1
	1b, t, discard a card: target creature gets +1/+0 and gains first strike until end of turn.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>horror spellshaper </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana black='1' colorless='1' />
				<action ref='T'/>
				<action ref='discard' value="1"/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
