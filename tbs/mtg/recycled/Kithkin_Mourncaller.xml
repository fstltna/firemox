<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kithkin Mourncaller">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	creature - kithkin scout
	2/2
	whenever an attacking kithkin or elf is put into your graveyard from play, you may draw a card.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>kithkin scout </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<test ref="tested-is-attacking"/>
						<or>
							<has-property property="elf"/>
							<has-property property="kithkin"/>
						</or>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<target type='you'/>
						<action ref='draw-a-card'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
