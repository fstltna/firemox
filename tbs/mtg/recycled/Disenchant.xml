<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd" name="Disenchant">
	<!-- tested 10/25/2004 , v0.80.27 -->
	<rules-author-comment>By fabdouglas</rules-author-comment>
	<init>
		<registers>
			<register index="white" value="1"/>
			<register index="colorless" value="1"/>
		</registers>
		<colors>white</colors>
		<idcards>instant</idcards>
	</init>

	<abilities>

		<activated-ability playable="this" zone="hand">
			<cost>
				<pay-mana value="manacost"/>
				<action ref="target-card">
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="destroy"/>
				<action ref="finish-spell"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
