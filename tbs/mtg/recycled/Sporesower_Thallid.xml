<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
    name="Sporesower Thallid">
    <rules-author-comment>Hoani CROSS</rules-author-comment>
    <init>
        <registers>
            <register index="colorless" value="2"/>
            <register index="green" value="2"/>
            <register index="power" value="4"/>
            <register index="toughness" value="4"/>
        </registers>
        <colors>green</colors>
        <idcards>creature</idcards>
        <properties>fungus</properties>
    </init>
    <abilities>
        <ability ref="cast-spell"/>
        <activated-ability zone="play" playable="instant">
            <cost>
                <target type="this"/>
                <repeat value="3"/>
                <remove-object object-name="spore"/>
                <target-list operation="clear"/>
            </cost>
            <effects>
                <create-card>
                    <card name="Saproling">
                        <rules-author-comment>Hoani CROSS</rules-author-comment>
                        <init>
                            <registers>
                                <register index="power" value="1"/>
                                <register index="toughness" value="1"/>
                            </registers>
                            <colors>green</colors>
                            <idcards>creature</idcards>
                            <properties>saproling token</properties>
                        </init>
                    </card>
                </create-card>
                <move-card controller="you" destination="play"/>
            </effects>
        </activated-ability>
        <triggered-ability zone="play">
            <beginning-of-phase phase="upkeep">
                <test ref="during-your-upkeep"/>
            </beginning-of-phase>
            <effects>
                <target type="card" mode="all" restriction-zone="play">
                    <test>
                        <and>
                            <has-property card="tested" property="fungus"/>
                            <controller card="tested" player="you"/>
                        </and>
                    </test>
                </target>
                <add-object object-name="spore"/>
            </effects>
        </triggered-ability>
    </abilities>
</card>
