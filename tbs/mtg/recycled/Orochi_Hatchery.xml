<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Orochi Hatchery">
<rules-author-comment>riclas</rules-author-comment>

<!--
		xx
	artifact
	orochi hatchery comes into play with x charge counters on it.
	5, t :put a 1/1 green snake creature token into play for each charge counter on orochi hatchery.
 -->

	<init>
		<registers>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
	</init>
	<abilities>
		<activated-ability playable="this" zone="hand">
			<cost>
				<action ref="pay-xx" />
			</cost>
			<effects>
				<action ref="put-in-play"/>
				<repeat>
					<value register="stack" index="0"/>
				</repeat>
				<add-object object-name="charge"/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='5' />
				<action ref='T'/>
			</cost>
			<effects>
				<repeat>
					<value>
						<counter object-name="charge" card="this"/>
					</value>
				</repeat>
				<create-card>
					<card name='Snake'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token snake </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
