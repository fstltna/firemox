<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Tin Street Hooligan">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	creature - goblin rogue
	2/1
	when tin street hooligan comes into play, if g was spent to play tin street hooligan, destroy target artifact.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>goblin rogue </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
						<sup right="0">
							<left>
								<mana-paid card="this" color="green" />
							</left>
						</sup>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-artifact'/>
			</cost>
			<effects>
				<action ref='destroy'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
