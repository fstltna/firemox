<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Frostweb Spider">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	snow creature - spider
	1/3
	reach 
	whenever frostweb spider blocks a creature with flying, put a +1/+1 counter on frostweb spider at end of combat.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>snow spider reach </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
				<attacking-test>
					<has-property property="flying"/>
				</attacking-test>
			</declared-blocking>
			<effects>
				<create-ability>
					<triggered-ability zone="play">
						<end-of-phase phase="eoc" />
						<effects>
							<target type='this'/>
							<add-object object-name='+1/+1'/>
							<unregister-this />
						</effects>
					</triggered-ability>
				</create-ability>
			</effects>
		</triggered-ability>
	</abilities>
</card>
