<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Mogg Alarm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1rr
	sorcery
	you may sacrifice two mountains rather than pay mogg alarm's mana cost.
	put two 1/1 red goblin creature tokens into play.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Goblin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>red</colors>
							<idcards>creature</idcards>
							<properties>token goblin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<action ref='sacrifice-a-permanent' value='2'>
					<test>
						<has-idcard idcard='mountain'/>
					</test>
				</action>
			</cost>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Goblin'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>red</colors>
							<idcards>creature</idcards>
							<properties>token goblin </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
