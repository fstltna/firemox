<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Soilshaper">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	creature - spirit
	1/1
	whenever you play a spirit or arcane spell, target land becomes a 3/3 creature until end of turn. it's still a land.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<casting>
				<test>
					<and>
						<or>
							<has-property property="spirit" />
							<has-property property="arcane" />
						</or>
						<controller player="you"/>
					</and>
				</test>
			</casting>
			<cost>
				<action ref='target-land'/>
			</cost>
			<effects>
				<add-modifier>
					<register-indirection index="power" value="3" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<register-indirection index="toughness" value="3" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<idcard-modifier idcard="creature" operation="or" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</idcard-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
