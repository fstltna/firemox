<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Dark Sphere">
<rules-author-comment>Fabdouglas</rules-author-comment>

	<init>
		<registers>
			<register index="colorless" value="0"/>
		</registers>
		<colors></colors>
		<idcards>artifact </idcards>
	</init>
	<abilities>
	<ability ref="cast-spell"/>
		<activated-ability playable="this" name="" zone="play">
			<cost>
				<action ref="T"/>
				<action ref="sacrifice-this"/>
				<target type="card" raise-event="false">
					<test ref="valid-damage-source"/>
				</target>
			</cost>
			<effects>
				<create-ability>
					<save target="you"/>
					<replacement-ability zone="play">
						<assigned-damage type="damage-can-be-prevented">
							<source-test>
								<is target="saved"/>
							</source-test>
							<destination-test>
								<is-this player="you"/>
							</destination-test>
						</assigned-damage>
						<effects>
							<target type="context.player"/>
							<assign-damage type="context.int2">
								<value>
									<div-rounded left="context.int" right="2"/>
								</value>
							</assign-damage>
							<!-- this shield is removed -->
							<unregister-this/>
						</effects>
					</replacement-ability>
					<until>
						<end-of-phase phase="cleanup"/>
					</until>
				</create-ability>
			</effects>
		</activated-ability>
	</abilities>
</card>
