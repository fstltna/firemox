<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="D'Avenant Archer">
<rules-author-comment>By Fabdouglas</rules-author-comment>

	<!-- {T} Dâ€™Avenant Archer deals 1 damage to target attacking or blocking creature. -->
	<init>
		<registers>
			<register index="colorless" value="2"/>
			<register index="white" value="1"/>
			<register index="power" value="1"/>
			<register index="toughness" value="2"/>
		</registers>
		<colors>white</colors>
		<idcards>creature </idcards>
		<properties>human soldier archer</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<activated-ability playable="instant" name="" zone="play">
			<cost>
				<action ref="T"/>
				<action ref="target-creature">
					<test>
						<and>
							<test ref="tested-is-attacking"/>
							<test ref="tested-is-blocking"/>
						</and>
					</test>
				</action>
			</cost>
			<effects>
				<!-- PUT HERE EFFECTS OF THIS ABILITY -->
				<assign-damage value="1" type="damage"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
