<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Order of the Stars">
<rules-author-comment>riclas</rules-author-comment>

<!--
		w
	creature - human cleric
	0/1
	defender 
	as order of the stars comes into play, choose a color.
	order of the stars has protection from the chosen color.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='power' value='0'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human cleric defender </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this />
						<not>
							<in-zone zone="play" />
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" />
				</destination-test>
			</moved-card>
			<cost>
				<input-color operation="or" index="0" register="stack" multiselect="false" />
			</cost>
			<effects>
				<target type="this" />
				<add-modifier>
					<property-modifier live-update="false">
						<property>
							<or left="protection-from-color">
								<right register="stack" index="0"/>
							</or>
						</property>
					</property-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
