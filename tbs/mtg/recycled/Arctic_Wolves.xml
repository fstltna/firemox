<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Arctic Wolves">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3gg
	creature - wolf
	4/5
	cumulative upkeep 2
	when arctic wolves comes into play, draw a card.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='4'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>wolf </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cumulative-upkeep'/>
		<triggered-ability resolution='normal' zone='play' name='cumulative-upkeep'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana>
							<colorless>
								<mult right="2">
									<left>
										<counter object-name="age" card="this"/>
									</left>
								</mult>
							</colorless>
						</pay-mana>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='you'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
