<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Hope Charm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		w
	instant
	choose one - target creature gains first strike until end of turn; or target player gains 2 life; or destroy target aura.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="first-strike-until-eot"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-player'/>
			</cost>
			<effects>
				<action ref="gain-life-target" value="2"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-permanent'>
					<test>
						<has-property property="aura"/>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="destroy"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
