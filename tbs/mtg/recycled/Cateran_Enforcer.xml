<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Cateran Enforcer">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3bb
	creature - mercenary
	4/3
	fear
	4, t :search your library for a mercenary card with converted mana cost 4 or less and put that card into play. then shuffle your library.
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='4'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>horror mercenary fear </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='4' />
				<action ref='T'/>
			</cost>
			<effects>
				<action ref="search-lib">
					<test>
						<and>
							<has-property property="mercenary"/>
							<sup left="5">
								<right register="tested" index="manacost"/>
							</sup>
						</and>
					</test>
				</action>
				<move-card controller="target.owner" destination="play"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
