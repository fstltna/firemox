<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Goldmeadow Lookout">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3w
	creature - kithkin spellshaper
	2/2
	w, t, discard a card: put a 1/1 white kithkin soldier creature token named goldmeadow harrier into play with "w, t :tap target creature."
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>kithkin spellshaper </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' />
				<action ref='T'/>
				<action ref='discard' value='1'/>
			</cost>
			<effects>
				<create-card>
					<card name='Goldmeadow Harrier'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token kithkin soldier</properties>
						</init>
						<abilities>
							<activated-ability playable='instant' name='' zone='play'>
								<cost>
									<pay-mana white='1' />
									<action ref='T' />
									<action ref='target-creature' />
								</cost>
								<effects>
									<tap />
								</effects>
							</activated-ability>
						</abilities>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
