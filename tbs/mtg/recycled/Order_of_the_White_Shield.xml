<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Order of the White Shield">
<rules-author-comment>riclas</rules-author-comment>

<!--
		ww
	creature - knight
	2/1
	protection from black
	w: order of the white shield gains first strike until end of turn.
	ww: order of the white shield gets +1/+0 until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human knight protection-from-black </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' />
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='2' />
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='1' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
