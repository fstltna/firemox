<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Darien, King of Kjeldor">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4ww
	legendary creature - human 
	3/3
	whenever you're dealt damage, you may put that many 1/1 white soldier creature tokens into play.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>legend human soldier</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type="damage-any">
				<destination-test>
					<is-player target="you"/>
				</destination-test>
			</assigned-damage>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<repeat value='context.int'/>
						<create-card>
							<card name='Soldier'>
								<rules-author-comment></rules-author-comment>
								<init>
									<registers>
										<register index='power' value='1'/>
										<register index='toughness' value='1'/>
									</registers>
									<colors>white</colors>
									<idcards>creature</idcards>
									<properties>token soldier </properties>
								</init>
							</card>
						</create-card>
						<move-card controller='you' destination='play'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
