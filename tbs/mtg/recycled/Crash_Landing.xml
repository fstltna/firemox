<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Crash Landing">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	instant
	target creature with flying loses flying until end of turn. crash landing deals damage to that creature equal to the number of forests you control.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'>
					<test>
						<has-property property="flying"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-modifier>
					<property-modifier operation="remove" property="flying" linked="false">
						<until>
							<end-of-phase phase="cleanup" />
						</until>
					</property-modifier>
				</add-modifier>
				<assign-damage type='damage-normal'>
					<value>
						<counter restriction-zone="play">
							<and>
								<has-idcard idcard="forest"/>
								<controller player="you"/>
							</and>
						</counter>
					</value>
				</assign-damage>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
