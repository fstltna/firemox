<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Pillaging Horde">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2rr
	creature - barbarian
	5/5
	when pillaging horde comes into play, sacrifice it unless you discard a card at random.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='5'/>
			<register index='toughness' value='5'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>human barbarian</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='sacrifice-this'/>
					</either>
					<either>
						<action ref='discard-random' value="1"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
