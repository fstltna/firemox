<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Auriok Bladewarden">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1w
	creature - human soldier
	1/1
	t :target creature gets +x/+x until end of turn, where x is auriok bladewarden's power.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value register='this' index='power'/>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value register='this' index='power'/>
					</register-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
