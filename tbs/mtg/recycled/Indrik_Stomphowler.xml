<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Indrik Stomphowler">
	<rules-author-comment>riclas</rules-author-comment>

	<!--
		4g
		
		creature - beast
		
		4/4
		
		when indrik stomphowler comes into play, destroy target artifact or enchantment.
	-->


	<init>
		<registers>
			<register index="green" value="1" />
			<register index="colorless" value="4" />
			<register index="power" value="4" />
			<register index="toughness" value="4" />
		</registers>
		<colors>green</colors>
		<idcards>creature</idcards>
		<properties>beast</properties>
	</init>
	<abilities>
		<ability ref="cast-spell" />
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this />
						<not>
							<in-zone zone="play" card="tested" />
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" card="tested" />
				</destination-test>
			</moved-card>
			<effects>
				<action ref="target-card">
					<test>
						<or>
							<test ref="is-targetable-artifact" />
							<test ref="is-targetable-enchantment" />
						</or>
					</test>
				</action>
				<action ref="destroy" />
			</effects>
		</triggered-ability>
	</abilities>
</card>
