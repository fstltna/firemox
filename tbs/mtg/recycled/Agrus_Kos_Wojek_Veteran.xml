<?xml version="1.0" encoding="US-ASCII" ?> 
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
    name="Agrus Kos, Wojek Veteran">
    <rules-author-comment>By surtur2</rules-author-comment>

	<init>
		<registers>
			<register index="colorless" value="3"/>
			<register index="red" value="1"/>
			<register index="white" value="1"/>
			<register index="power" value="3"/>
			<register index="toughness" value="3"/>
		</registers>
		<colors>red white</colors>
		<idcards>creature</idcards>
		<properties>human soldier legend</properties>
	</init>
	<abilities>
		<ability ref="cast-spell"/>
		<triggered-ability zone="play">
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<action ref="all-creatures">
					<test>
						<and>
							<has-color color="red"/>
							<test ref="tested-is-attacking"/>
						</and>
					</test>
				</action>
				<action ref="add+2+0-until-eot"/>
			</effects>
		</triggered-ability>
		<triggered-ability zone="play">
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<action ref="all-creatures">
					<test>
						<and>
							<has-color color="white"/>
							<test ref="tested-is-attacking"/>
						</and>
					</test>
				</action>
				<action ref="add+0+2-until-eot"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>