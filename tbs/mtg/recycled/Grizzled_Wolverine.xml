<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Grizzled Wolverine">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1rr
	creature - wolverine
	2/2
	whenever grizzled wolverine becomes blocked, you may pay r. if you do, grizzled wolverine gets +2/+0 until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='2'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>wolverine </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<attacking-test>
					<is-this/>
				</attacking-test>
			</declared-blocking>
			<effects>
				<choice cancel="true" controller="you">
					<either>
						<pay-mana red="1"/>
						<action ref="gain+2+0-until-eot"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
