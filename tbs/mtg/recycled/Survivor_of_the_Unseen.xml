<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Survivor of the Unseen">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2u
	creature - human wizard
	2/1
	cumulative upkeep 2 
	t :draw two cards, then put a card from your hand on top of your library.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>human wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cumulative-upkeep'/>
		<triggered-ability resolution='normal' zone='play' name='cumulative-upkeep'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<pay-mana>
							<colorless>
								<mult right="2">
									<left>
										<counter object-name='age' card='this'/>
									</left>
								</mult>
							</colorless>
						</pay-mana>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
			</cost>
			<effects>
				<target type='you'/>
				<repeat value='2'/>
				<action ref='draw-a-card'/>
				<target type="card" mode="choose" restriction-zone="hand">
					<test>
						<controller player="you"/>
					</test>
				</target>
				<action ref="move-library-top"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
