<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Seething Anger">
<rules-author-comment>riclas</rules-author-comment>

<!--
		r
	sorcery
	buyback 3 
	target creature gets +3/+0 until end of turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<register-modifier index='power' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
				</add-modifier>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<pay-mana colorless='3' />
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
