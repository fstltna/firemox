<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Flowstone Flood">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3r
	sorcery
	buyback-pay 3 life, discard a card at random 
	destroy target land.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='3'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-land'/>
			</cost>
			<effects>
				<action ref='destroy'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<action ref="pay-life" value="3"/>
				<action ref="discard-random" value="1"/>
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
