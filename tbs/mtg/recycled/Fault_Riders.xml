<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Fault Riders">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2r
	creature - soldier
	2/2
	sacrifice a land: fault riders gets +2/+0 and gains first strike until end of turn. play this ability only once each turn.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>human soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='sacrifice-a-land' value='1'/>
				<action ref='use-once-each-turn'/>
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='2' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
