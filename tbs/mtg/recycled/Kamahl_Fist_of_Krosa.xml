<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kamahl, Fist of Krosa">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4gg
	legendary creature - druid
	4/3
	g: target land becomes a 1/1 creature until end of turn. it's still a land.
	2ggg: creatures you control get +3/+3 and gain trample until end of turn.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='4'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>legend human druid </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='target-land'/>
			</cost>
			<effects>
				<add-modifier>
					<register-indirection index="power" value="1" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<register-indirection index="toughness" value="1" operation="set" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</register-indirection>
					<idcard-modifier idcard="creature" operation="or" linked="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
				 	</idcard-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='3' colorless='2' />
			</cost>
			<effects>
				<target type="card" mode="all" restriction-zone="play">
					<test>
						<and>
							<has-idcard idcard="creature" />
							<controller player="you"/>
						</and>
					</test>
				</target>
				<action ref="add+3+3-until-eot"/>
				<action ref="trample-until-eot"/>
			</effects>
		</activated-ability>
	</abilities>
</card>
