<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Search for Tomorrow">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2g
	sorcery
	search your library for a basic land card and put it into play. then shuffle your library.
	suspend 2-g 
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<ability ref='cast-suspend'>
			<actions>
				<pay-mana green='1' />
			</actions>
			<actions>
				<repeat value='2'/>
				<add-object object-name='time'/>
			</actions>
		</ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<action ref='search-lib' value="1">
					<test>
						<test ref="is-basic-land"/>
					</test>
				</action>
				<move-card destination="play" controller="you"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
