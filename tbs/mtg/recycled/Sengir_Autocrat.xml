<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Sengir Autocrat">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3b
	creature - human
	2/2
	when sengir autocrat comes into play, put three 0/1 black serf creature tokens into play.
	when sengir autocrat leaves play, remove all serf tokens from the game.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>human </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='3'/>
				<create-card>
					<card name='Serf'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='0'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>black</colors>
							<idcards>creature</idcards>
							<properties>token serf </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<not>
						<in-zone zone='play' card='tested'/>
					</not>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="all-creatures">
					<test>
						<and>
							<has-property property="token"/>
							<has-property property="serf"/>
						</and>
					</test>
				</action>
				<action ref="remove-from-game"/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
