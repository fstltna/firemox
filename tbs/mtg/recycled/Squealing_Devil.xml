<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Squealing Devil">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	creature - devil
	2/1
	fear
	when squealing devil comes into play, you may pay x. if you do, target creature gets +x/+0 until end of turn.
	when squealing devil comes into play, sacrifice it unless b was spent to play it.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>creature </idcards>
		<properties>devil fear </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<choice controller="you" cancel="true">
					<either>
						<action ref="pay-x"/>
						<add-modifier>
							<register-modifier index='power' operation='add' linked='false'>
								<until>
									<end-of-phase phase='cleanup'/>
								</until>
								<value register='stack' index='0'/>
							</register-modifier>
						</add-modifier>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this />
						<not>
							<in-zone zone="play" />
						</not>
						<or>
							<not>
								<is other="this" target="currentcard" />
							</not>
							<equal right="0">
								<left>
									<mana-paid card="this" color="black" />
								</left>
							</equal>
						</or>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" />
				</destination-test>
			</moved-card>
			<effects>
				<if-then-hop elsehop="2">
					<test>
						<not>
							<is target="this" other="context.event-source" />
						</not>
					</test>
				</if-then-hop>
				<action ref="sacrifice-this" />
				<unregister-this />
			</effects>
		</triggered-ability>
	</abilities>
</card>
