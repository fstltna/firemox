<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Pegasus Stampede">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1w
	sorcery
	buyback-sacrifice a land. 
	put a 1/1 white pegasus creature token with flying into play.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>sorcery </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<repeat value='1'/>
				<create-card>
					<card name='Pegasus'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token pegasus flying </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<action ref='sacrifice-a-land' value='1'/>
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
