<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Masticore">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4
	artifact creature
	4/4
	at the beginning of your upkeep, you may discard a card. if you don't, sacrifice masticore.
	2: masticore deals 1 damage to target creature.
	2: regenerate masticore.
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors></colors>
		<idcards>artifact-creature </idcards>
		<properties>masticore</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<effects>
				<choice controller="you" cancel="false">
					<either>
						<action ref='discard' value="1"/>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='2' />
				<action ref='target-creature'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='2' />
			</cost>
			<effects>
				<action ref='regenerate'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
