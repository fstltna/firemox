<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Victual Sliver">
<rules-author-comment>riclas</rules-author-comment>

<!--
		gw
	creature - sliver
	2/2
	all slivers have "2, sacrifice this permanent: you gain 4 life."
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='green' value='1'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>white green </colors>
		<idcards>creature </idcards>
		<properties>sliver </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
	</abilities>
	<modifiers>
		<static-modifier filter-zone="play">
			<modifiers>
				<ability-modifier linked="true" layer="global">
					<abilities>
						<activated-ability playable="instant" name="" zone="play">
							<cost>
								<pay-mana colorless="2"/>
								<action ref="sacrifice-this"/>
							</cost>
							<effects>
								<action ref='gain-life' value='4'/>
							</effects>
						</activated-ability>
					</abilities>
				</ability-modifier>
			</modifiers>
			<while>
			 	<has-property property="sliver"/>
			</while>
		</static-modifier>
	</modifiers>
</card>
