<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Searing Touch">
<rules-author-comment>riclas</rules-author-comment>

<!--
		r
	instant
	buyback 4 
	searing touch deals 1 damage to target creature or player.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<pay-mana colorless='4' />
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
