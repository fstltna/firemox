<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Kavu Mauler">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4gg
	creature - kavu
	4/4
	trample
	whenever kavu mauler attacks, it gets +1/+1 until end of turn for each other attacking kavu.
 -->

	<init>
		<registers>
			<register index='green' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>kavu trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is-this/>
				</test>
			</declared-attacking>
			<effects>
				<add-modifier>
					<register-modifier index='power' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter restriction-zone="play">
								<and>
									<test ref="tested-is-attacking"/>
									<not>
										<is-this/>
									</not>
									<has-property property="kavu"/>
								</and>
							</counter>
						</value>
					</register-modifier>
					<register-modifier index='toughness' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
						<value>
							<counter restriction-zone="play">
								<and>
									<test ref="tested-is-attacking"/>
									<not>
										<is-this/>
									</not>
									<has-property property="kavu"/>
								</and>
							</counter>
						</value>
					</register-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
