<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Golgari Germination">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1bg
	enchantment
	whenever a nontoken creature you control is put into a graveyard from play, put a 1/1 green saproling creature token into play.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>green black </colors>
		<idcards>global-enchantment </idcards>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="creature"/>
						<not>
							<has-property property="token"/>
						</not>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<repeat value='1'/>
				<create-card>
					<card name='Saproling'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>green</colors>
							<idcards>creature</idcards>
							<properties>token saproling </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
