<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Scryb Ranger">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1g
	creature - faerie
	1/1
	flash 
	flying, protection from blue
	return a forest you control to its owner's hand: untap target creature. play this ability only once each turn.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>faerie flash flying protection-from-blue </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<test ref="once-each-turn"/>
			<cost>
				<action ref="target-land">
					<test>
						<and>
							<has-idcard idcard="forest"/>
							<controller player="you"/>
						</and>
					</test>
				</action>
				<action ref='return-to-hand'/>
				<action ref='use-once-each-turn'/>
				<target-list operation="clear"/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<untap/>
			</effects>
		</activated-ability>
	</abilities>
</card>
