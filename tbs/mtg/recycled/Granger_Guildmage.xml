<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Granger Guildmage">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	creature - human wizard
	1/1
	w, t :target creature gains first strike until end of turn.
	r, t :granger guildmage deals 1 damage to target creature or player and 1 damage to you.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>human wizard </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' />
				<action ref='T'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana red='1' />
				<action ref='T'/>
				<action ref='target-dealtable'/>
			</cost>
			<effects>
				<assign-damage value='1' type='damage-normal'/>
				<target type="you"/>
				<assign-damage value='1' type='damage-normal'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
