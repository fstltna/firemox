<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Waterspout Djinn">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2uu
	creature - djinn
	4/4
	flying
	at the beginning of your upkeep, sacrifice waterspout djinn unless you return an untapped island you control to its owner's hand.
 -->

	<init>
		<registers>
			<register index='blue' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>djinn flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability resolution='normal' zone='play'>
			<beginning-of-phase phase='upkeep'>
				<test ref='during-your-upkeep'/>
			</beginning-of-phase>
			<cost>
				<choice cancel='false'>
					<either>
						<action ref="target-land">
							<test>
								<and>
									<has-idcard idcard="island"/>
									<controller player="you"/>
									<in-zone zone="playANDuntapped"/>
								</and>
							</test>
						</action>
						<action ref="return-to-hand"/>
					</either>
					<either>
						<action ref='sacrifice-this'/>
					</either>
				</choice>
			</cost>
		</triggered-ability>
	</abilities>
</card>
