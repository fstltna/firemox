<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Dismantling Blow">
	<rules-author-comment></rules-author-comment>

	<!-- 
		
		Dismantling Blow
		2W
		Instant
		Kicker 2U (You may pay an additional 2U as you play this spell.)
		Destroy target artifact or enchantment.
		If the kicker cost was paid, draw two cards.
	-->
	<init>
		<registers>
			<register index="colorless" value="2" />
			<register index="white" value="1" />
		</registers>
		<colors>white</colors>
		<idcards>instant</idcards>
	</init>
	<abilities>
		<activated-ability playable="this" zone="hand">
			<cost>
				<pay-mana value="manacost" />
				<action ref="target-card">
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
			</cost>
			<effects>
				<action ref="destroy" />
				<action ref="finish-spell" />
			</effects>
		</activated-ability>
		<activated-ability playable="this" zone="hand">
			<cost>
				<pay-mana value="manacost" />
				<action ref="target-card">
					<test>
						<or>
							<has-idcard idcard="artifact"/>
							<has-idcard idcard="enchantment"/>
						</or>
					</test>
				</action>
				<action ref="kicker"/>
				<pay-mana colorless="2" white="1" />
			</cost>
			<effects>
				<action ref="destroy" />
				<target-list operation="clear" name="%"/>
				<target type="you" />
				<repeat value="2" />
				<action ref="draw-a-card" />
				<action ref="finish-spell" />
			</effects>
		</activated-ability>
	</abilities>
</card>
