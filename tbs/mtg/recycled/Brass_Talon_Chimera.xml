<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Brass-Talon Chimera">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4
	artifact creature - chimera
	2/2
	first strike
	sacrifice brass-talon chimera: put a +2/+2 counter on target chimera and that chimera gains first strike. 
 -->

	<init>
		<registers>
			<register index='colorless' value='4'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors></colors>
		<idcards>artifact-creature</idcards>
		<properties>chimera first-strike </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='sacrifice-this'/>
				<action ref='target-creature'>
					<test>
						<has-property property="chimera"/>
					</test>
				</action>
			</cost>
			<effects>
				<add-object object-name='+2/+2'/>
				<add-modifier>
					<property-modifier property='first-strike' linked='false'/>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
