<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Shivan Wurm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3rg
	creature - wurm
	7/7
	trample
	when shivan wurm comes into play, return a red or green creature you control to its owner's hand.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='7'/>
			<register index='toughness' value='7'/>
		</registers>
		<colors>red green </colors>
		<idcards>creature </idcards>
		<properties>wurm trample </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<action ref="target-creature">
					<test>
						<and>
							<controller player="you"/>
							<or>
								<has-color color="green"/>
								<has-color color="red"/>
							</or>
						</and>
					</test>
				</action>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
