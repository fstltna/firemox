<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Embalmed Brawler">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	creature - zombie
	2/2
	amplify 1 
	whenever embalmed brawler attacks or blocks, you lose 1 life for each +1/+1 counter on it.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>zombie </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref="amplify-1"/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is-this/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<action ref='lose-life'>
					<value>
						<counter object-name="+1/+1" card="this"/>
					</value>
				</action>
			</effects>
		</triggered-ability>
	</abilities>
</card>
