<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Fungal Shambler">
	<rules-author-comment>riclas</rules-author-comment>

	<!--
		4gub
		creature - beast
		6/4
		trample
		whenever fungal shambler deals damage to an opponent, you draw a card and that opponent discards a card.
	-->

	<init>
		<registers>
			<register index='green' value='1' />
			<register index='blue' value='1' />
			<register index='black' value='1' />
			<register index='colorless' value='4' />
			<register index='power' value='6' />
			<register index='toughness' value='4' />
		</registers>
		<colors>green blue black</colors>
		<idcards>creature</idcards>
		<properties>fungus beast trample</properties>
	</init>
	<abilities>
		<ability ref='cast-spell' />
		<triggered-ability zone='play'>
			<assigned-damage type='damage-any'>
				<source-test>
					<is-this />
				</source-test>
				<destination-test>
					<is other="opponent" />
				</destination-test>
			</assigned-damage>
			<effects>
				<target type='you' />
				<action ref='draw-a-card' />
				<target-list operation="clear" />
				<target type="opponent" />
				<action ref='player-discard' value="1" />
			</effects>
		</triggered-ability>
	</abilities>
</card>
