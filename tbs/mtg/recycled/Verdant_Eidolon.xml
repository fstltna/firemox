<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Verdant Eidolon">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3g
	creature - spirit
	2/2
	g, sacrifice verdant eidolon: add three mana of any one color to your mana pool.
	whenever you play a multicolored spell, you may return verdant eidolon from your graveyard to your hand.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
		<properties>spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<give-mana black='3'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<give-mana blue='3'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<give-mana green='3'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<give-mana red='3'/>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana green='1' />
				<action ref='sacrifice-this'/>
			</cost>
			<effects>
				<give-mana white='3'/>
			</effects>
		</activated-ability>
		<triggered-ability zone="graveyard">
			<casting>
				<test>
					<and>
						<controller player="you"/>
						<test ref="is-multicolored"/>
					</and>
				</test>
			</casting>
			<effects>
				<choice cancel="true" controller="you">
					<either>
						<target type="this" raise-event="false"/>
						<action ref="return-to-hand"/>
					</either>
				</choice>
			</effects>
		</triggered-ability>
	</abilities>
</card>
