<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Flash of Defiance">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1r
	sorcery
	players can't block with green and/or white creatures this turn.
	flashback-1r, pay 3 life. 
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>sorcery </idcards>
	</init>
	<actions>
		<action reference-name='main-effects'>
			<action ref="all-creatures">
				<test>
					<or>
						<has-color color="white"/>
						<has-color color="green"/>
					</or>
				</test>
			</action>
			<action ref="cannot-block-until-eot"/>
		</action>
	</actions>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='flashback%a' zone='graveyard'>
			<cost>
				<pay-mana colorless="1" red="1"/>
				<action ref="pay-life" value="3"/>
			</cost>
			<effects>
				<action ref='main-effects'/>
				<action ref='flashback'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
