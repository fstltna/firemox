<?xml version="1.0"?>
<card xmlns="http://sourceforge.net/projects/firemox" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://sourceforge.net/projects/firemox ../../validator.xsd"
	name="Abduction">
<rules-author-comment>Fabdouglas</rules-author-comment>

<!--  {2}{u}{u} when abduction comes into play, untap enchanted creature. 
you control enchanted creature. 
when enchanted creature is put into a graveyard, return that creature to play under its owner's control. -->

	<init>
		<registers>
			<register index="colorless" value="2"/>
			<register index="blue" value="2"/>
		</registers>
		<colors>blue</colors>
		<idcards>local-enchantment </idcards>
	</init>
	<abilities>
		<ability ref="cast-enchant"/>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone="play" card="tested"/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone="play" card="tested"/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="attachedto"/>
				<untap/>
			</effects>
		</triggered-ability>
		<triggered-ability zone="play">
			<moved-card>
				<source-test>
					<and>
						<is target="attachedto"/>
						<in-zone zone="play" card="tested"/>
					</and>
				</source-test>
				<destination-test>
						<in-zone zone="graveyard" card="tested"/>
				</destination-test>
			</moved-card>
			<effects>
				<target type="context.card"/>
				<move-card controller="target.owner" destination="play" name=""/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment ref="control"/>
</card>
