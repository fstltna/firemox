<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Riftwing Cloudskate">
<rules-author-comment>riclas</rules-author-comment>

<!--
		3uu
	creature - illusion
	2/2
	flying
	when riftwing cloudskate comes into play, return target permanent to its owner's hand.
	suspend 3-1u 
 -->

	<init>
		<registers>
			<register index='blue' value='2'/>
			<register index='colorless' value='3'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>illusion flying </properties>
	</init>
	<abilities>
		<ability ref='cast-suspend'>
			<actions>
				<pay-mana blue='1' colorless='1' />
			</actions>
			<actions>
				<repeat value='3'/>
				<add-object object-name='time'/>
			</actions>
		</ability>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-permanent'/>
			</cost>
			<effects>
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
	</abilities>
</card>
