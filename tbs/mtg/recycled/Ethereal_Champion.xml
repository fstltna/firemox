<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Ethereal Champion">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2www
	creature - avatar
	3/4
	pay 1 life: prevent the next 1 damage that would be dealt to ethereal champion this turn.
 -->

	<init>
		<registers>
			<register index='white' value='3'/>
			<register index='colorless' value='2'/>
			<register index='power' value='3'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>avatar </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='pay-life' value='1'/>
				<target type="this"/>
			</cost>
			<effects>
				<action ref='prevent-1'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
