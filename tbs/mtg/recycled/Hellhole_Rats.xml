<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Hellhole Rats">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2br
	creature - rat
	2/2
	haste
	when hellhole rats comes into play, target player discards a card. hellhole rats deals damage to that player equal to that card's converted mana cost.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='2'/>
		</registers>
		<colors>red black </colors>
		<idcards>creature </idcards>
		<properties>rat haste </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<cost>
				<action ref='target-player'/>
			</cost>
			<effects>
				<action ref='player-discard' value='1'/>
				<assign-damage type='damage-normal'>
					<value register='target-list.last' index='manacost'/>
				</assign-damage>
			</effects>
		</triggered-ability>
	</abilities>
</card>
