<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Fever Charm">
<rules-author-comment>riclas</rules-author-comment>

<!--
		r
	instant
	choose one - target creature gains haste until end of turn; or target creature gets +2/+0 until end of turn; or fever charm deals 3 damage to target wizard.
 -->

	<init>
		<registers>
			<register index='red' value='1'/>
		</registers>
		<colors>red </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'>
					<test>
						<has-property property="wizard"/>
					</test>
				</action>
			</cost>
			<effects>
				<assign-damage value='3' type='damage-normal'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="haste-until-eot"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref='target-creature'/>
			</cost>
			<effects>
				<action ref="add+2+0-until-eot"/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
