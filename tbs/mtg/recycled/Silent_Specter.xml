<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Silent Specter">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4bb
	creature - specter
	4/4
	flying
	whenever silent specter deals combat damage to a player, that player discards two cards.
	morph 3bb 
 -->

	<init>
		<registers>
			<register index='black' value='2'/>
			<register index='colorless' value='4'/>
			<register index='power' value='4'/>
			<register index='toughness' value='4'/>
		</registers>
		<colors>black </colors>
		<idcards>creature </idcards>
		<properties>specter flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<assigned-damage type='damage-combat'>
				<source-test>
					<and>
						<is-face-up card="this"/>
						<is-this/>
					</and>
				</source-test>
				<destination-test>
					<is-player/>
				</destination-test>
			</assigned-damage>
			<effects>
				<target type="context.player"/>
				<action ref='player-discard' value='2'/>
			</effects>
		</triggered-ability>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana black='2' colorless='3' />
			</actions>
		</ability>
	</abilities>
</card>
