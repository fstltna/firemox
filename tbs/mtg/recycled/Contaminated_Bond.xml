<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Contaminated Bond">
<rules-author-comment>riclas</rules-author-comment>

<!--
		1b
	enchantment - aura
	enchant creature 
	whenever enchanted creature attacks or blocks, its controller loses 3 life.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='1'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<declared-blocking>
				<blocking-test>
					<is target="attachedto"/>
				</blocking-test>
			</declared-blocking>
			<effects>
				<target type="attachedto.controller"/>
				<action ref='lose-life-target' value='3'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='play'>
			<declared-attacking>
				<test>
					<is target="attachedto"/>
				</test>
			</declared-attacking>
			<effects>
				<target type="attachedto.controller"/>
				<action ref='lose-life-target' value='3'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment ref='enchant-creature'/>
</card>
