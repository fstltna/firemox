<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Twilight Drover">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2w
	creature - spirit
	1/1
	whenever a creature token leaves play, put a +1/+1 counter on twilight drover.
	2w, remove a +1/+1 counter from twilight drover: put two 1/1 white spirit creature tokens with flying into play.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='colorless' value='2'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>spirit </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<has-idcard idcard="creature"/>
						<has-property property="token"/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<not>
						<in-zone zone='play' card='tested'/>
					</not>
				</destination-test>
			</moved-card>
			<effects>
				<target type='this'/>
				<add-object object-name='+1/+1'/>
			</effects>
		</triggered-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana white='1' colorless='2' />
				<target type='this'/>
				<remove-object object-name='+1/+1'/>
			</cost>
			<effects>
				<repeat value='2'/>
				<create-card>
					<card name='Spirit'>
						<rules-author-comment></rules-author-comment>
						<init>
							<registers>
								<register index='power' value='1'/>
								<register index='toughness' value='1'/>
							</registers>
							<colors>white</colors>
							<idcards>creature</idcards>
							<properties>token spirit flying </properties>
						</init>
					</card>
				</create-card>
				<move-card controller='you' destination='play'/>
			</effects>
		</activated-ability>
	</abilities>
</card>
