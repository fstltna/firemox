<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Spell Burst">
<rules-author-comment>riclas</rules-author-comment>

<!--
		xu
	instant
	buyback 3 
	counter target spell with converted mana cost x.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
		</registers>
		<colors>blue </colors>
		<idcards>instant </idcards>
	</init>
	<abilities>
		<activated-ability reference-name='main-ability' playable='this' name='' zone='hand'>
			<cost>
				<pay-mana value='manacost'/>
				<action ref="pay-x"/>
				<action ref="target-spell">
					<test>
						<equal>
							<left register="tested" index="manacost"/>
							<right register="stack" index="0"/>
						</equal>
					</test>
				</action>
			</cost>
			<effects>
				<action ref='counter'/>
				<action ref='finish-spell'/>
			</effects>
		</activated-ability>
		<activated-ability playable='this' name='buyback%a' zone='hand'>
			<cost>
				<action ref='buyback'/>
				<pay-mana colorless='3' />
				<insert-ability ref='main-ability'/>
			</cost>
		</activated-ability>
	</abilities>
</card>
