<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Glintwing Invoker">
<rules-author-comment>riclas</rules-author-comment>

<!--
		4u
	creature - wizard mutant
	3/3
	7u: glintwing invoker gets +3/+3 and gains flying until end of turn.
 -->

	<init>
		<registers>
			<register index='blue' value='1'/>
			<register index='colorless' value='4'/>
			<register index='power' value='3'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>blue </colors>
		<idcards>creature </idcards>
		<properties>human wizard mutant </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana blue='1' colorless='7' />
			</cost>
			<effects>
				<target type='this'/>
				<add-modifier>
					<register-modifier index='power' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<register-modifier index='toughness' value='3' operation='add' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</register-modifier>
					<property-modifier property='flying' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
