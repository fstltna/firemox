<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Tainted Well">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2b
	enchantment - aura
	enchant land
	when tainted well comes into play, draw a card.
	enchanted land is a swamp.
 -->

	<init>
		<registers>
			<register index='black' value='1'/>
			<register index='colorless' value='2'/>
		</registers>
		<colors>black </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<not>
							<in-zone zone='play' card='tested'/>
						</not>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='play' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='you'/>
				<action ref='draw-a-card'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<modifiers>
			<idcard-modifier idcard="swamp" operation="set" linked="true" />
			<property-modifier property="basic-land" operation="add" linked="true" />
			<ability-modifier operation="clear" linked="true">
				<abilities />
			</ability-modifier>
		</modifiers>
		<valid-target ref="valid-land-to-enchant" />
		<valid-attachment ref="valid-enchant-land" />
	</attachment>
</card>
