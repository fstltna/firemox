		</registers>
		<colors>black</colors>
		<idcards>creature </idcards>
		<properties>wall</properties>
	</init>
	<abilities>
	<ability ref="cast-spell"/>
		<activated-ability zone="play" playable="instant">
			<cost>
				<pay-mana colorless="1" black="1"/>
