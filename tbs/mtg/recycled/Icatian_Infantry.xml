<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Icatian Infantry">
<rules-author-comment>riclas</rules-author-comment>

<!--
		w
	creature - soldier
	1/1
	1: icatian infantry gains banding until end of turn.
	1: icatian infantry gains first strike until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>human soldier </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='banding' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<pay-mana colorless='1' />
			</cost>
			<effects>
				<add-modifier>
					<property-modifier property='first-strike' linked='false'>
						<until>
							<end-of-phase phase='cleanup'/>
						</until>
					</property-modifier>
				</add-modifier>
			</effects>
		</activated-ability>
	</abilities>
</card>
