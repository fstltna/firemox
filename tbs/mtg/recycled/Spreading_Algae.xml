<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Spreading Algae">
<rules-author-comment>riclas</rules-author-comment>

<!--
		g
	enchantment - aura
	enchant swamp
	when enchanted land becomes tapped, destroy it.
	when spreading algae is put into a graveyard from play, return spreading algae to its owner's hand.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>local-enchantment </idcards>
		<properties>aura </properties>
	</init>
	<abilities>
		<ability ref='cast-enchant'/>
		<triggered-ability zone='play'>
			<become-tapped>
				<test>
					<is target="attachedto"/>
				</test>
			</become-tapped>
			<effects>
				<action ref='destroy'/>
			</effects>
		</triggered-ability>
		<triggered-ability zone='graveyard'>
			<moved-card>
				<source-test>
					<and>
						<is-this/>
						<in-zone zone='play' card='tested'/>
					</and>
				</source-test>
				<destination-test>
					<in-zone zone='graveyard' card='tested'/>
				</destination-test>
			</moved-card>
			<effects>
				<target type='this' />
				<action ref='return-to-hand'/>
			</effects>
		</triggered-ability>
	</abilities>
	<attachment>
		<valid-target>
			<and>
				<test ref="valid-to-enchant" />
				<test ref="is-targetable-land" />
				<has-idcard idcard="swamp" card="tested"/>
			</and>
		</valid-target>
		<valid-attachment ref="valid-enchant-land" />
	</attachment>
	</card>
