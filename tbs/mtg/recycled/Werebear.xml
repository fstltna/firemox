<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name='Werebear'>
<rules-author-comment></rules-author-comment>

<!--
		1g
	creature - druid bear
	1/1
	t :add g to your mana pool.
	threshold - werebear gets +3/+3 as long as seven or more cards are in your graveyard.
 -->

	<init>
		<registers>
			<register index='green' value='1'/>
			<register index='colorless' value='1'/>
			<register index='power' value='1'/>
			<register index='toughness' value='1'/>
		</registers>
		<colors>green </colors>
		<idcards>creature </idcards>
	<properties>human bear druid</properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<activated-ability playable='instant' name='' zone='play'>
			<cost>
				<action ref='T'/>
			</cost>
			<effects>
				<give-mana green='1' />
			</effects>
		</activated-ability>
	</abilities>
	<modifiers>
		<register-modifier index="power" value="3" operation="add" linked="false">
			<while>
				<test ref="threshold"/>
			</while>
		</register-modifier>
		<register-modifier index="toughness" value="3" operation="add" linked="false">
			<while>
				<test ref="threshold"/>
			</while>
		</register-modifier>
	</modifiers>
</card>
