<?xml version='1.0'?>
<card xmlns='http://sourceforge.net/projects/firemox'
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://sourceforge.net/projects/firemox ../../validator.xsd'
	name="Aven Liberator">
<rules-author-comment>riclas</rules-author-comment>

<!--
		2ww
	creature - bird soldier
	2/3
	flying
	morph 3w 
	when aven liberator is turned face up, target creature you control gains protection from the color of your choice until end of turn.
 -->

	<init>
		<registers>
			<register index='white' value='2'/>
			<register index='colorless' value='2'/>
			<register index='power' value='2'/>
			<register index='toughness' value='3'/>
		</registers>
		<colors>white </colors>
		<idcards>creature </idcards>
		<properties>bird soldier flying </properties>
	</init>
	<abilities>
		<ability ref='cast-spell'/>
		<ability ref='cast-morph'/>
		<ability ref='morph'>
			<actions>
				<pay-mana white='1' colorless='3' />
			</actions>
		</ability>
		<triggered-ability zone='play'>
			<faced-up>
				<test>
					<is-this />
				</test>
			</faced-up>
			<cost>
				<action ref="target-creature">
					<test>
						<controller player="you" card="tested"/>
					</test>
				</action>
			</cost>
			<effects>
				<input-color controller="you" operation="set" register="stack" index="0"/>
				<add-modifier>
					<property-modifier live-update="false">
				 		<until>
				 			<end-of-phase phase="cleanup"/>
				 		</until>
						<property>
							<or left="protection-from-color">
								<right register="stack" index="0"/>
							</or>
						</property>
					</property-modifier>
				</add-modifier>
			</effects>
		</triggered-ability>
	</abilities>
</card>
